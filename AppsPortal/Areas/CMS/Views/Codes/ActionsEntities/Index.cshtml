@{
    ViewBag.Title = "ActionsVerbs";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("398f5ab6-72e4-49a0-ade1-a9feeaf8e789")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.ActionsEntitiesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ActionEntityDescription, DbColumnName = "ActionEntityDescription", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-ActionsVerbs">
            @Html.DatatableFilterControls(DataTableNames.ActionsEntitiesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.ActionsEntitiesDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ActionsEntitiesDataTable)
        @Html.IndexDatatableCreate(Permissions.ActionsEntities.Create, Apps.CMS, Url.Action("ActionsEntities/Create", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.ActionsEntities.Delete, Apps.CMS, DataTableNames.ActionsEntitiesDataTable)
        @Html.IndexDatatableRestor(Permissions.ActionsEntities.Restore, Apps.CMS, DataTableNames.ActionsEntitiesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ActionsEntitiesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ActionsEntitiesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

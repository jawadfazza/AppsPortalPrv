@{
    ViewBag.Title = "JobTitles";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("757f2423-d1ca-4b7d-a0b4-9254c9b741a7")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.JobTitlesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.JobTitleDescription, DbColumnName = "JobTitleDescription", FilterForDataType = "Text" })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.JobTitlesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.JobTitlesDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.JobTitlesDataTable)
        @Html.IndexDatatableCreate(Permissions.JobTitles.Create, Apps.CMS, Url.Action("JobTitles/Create/", "Codes", new { Area = "CMS" }))
        @Html.IndexDatatableDelete(Permissions.JobTitles.Delete, Apps.CMS, DataTableNames.JobTitlesDataTable)
        @Html.IndexDatatableRestor(Permissions.JobTitles.Restore, Apps.CMS, DataTableNames.JobTitlesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.JobTitlesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.JobTitlesDataTable, FormController = "Codes", Area = "CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

            </div>

        </div>


        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.MissionReportFormDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.MissionReportFormDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.MissionReportFormDataTable)
        @Html.IndexDatatableCreateNoPermission("/IMS/MissionForm/Create")

@model MasterRecordStatus
<h3 class="Title">@resxPages.Warehouses</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.WarehouseFocalPointsDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.WarehouseFocalPointsDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.WarehouseFocalPointsDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.WarehouseFocalPointsDataTable)
                @Html.FieldDataTableCreate(Permissions.STIConfiguration.Create, Apps.WMS, Url.Action("WarehouseFocalPointCreate", "WarehouseConfiguration", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.STIConfiguration.Delete, Apps.WMS, DataTableNames.WarehouseFocalPointsDataTable)
                @Html.FieldDataTableRestore(Permissions.STIConfiguration.Restore, Apps.WMS, DataTableNames.WarehouseFocalPointsDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.WarehouseFocalPointsDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.WarehouseFocalPointsDataTable, FormController = "WarehouseConfiguration", Area = "WMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
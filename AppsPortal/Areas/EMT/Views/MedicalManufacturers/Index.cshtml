@{
    ViewBag.Title = "JobTitles";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("23d6e501-b488-4aad-b7ce-022dc4a8fa89")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.MedicalManufacturersDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.MedicalManufacturerDescription, DbColumnName = "MedicalManufacturerDescription", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })

            </div>
          
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.MedicalManufacturersDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.MedicalManufacturersDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.MedicalManufacturersDataTable)
        @Html.IndexDatatableCreate(Permissions.MedicalManufacturer.Create, Apps.EMT, "/EMT/MedicalManufacturers/Create")
        @Html.IndexDatatableDelete(Permissions.MedicalManufacturer.Delete, Apps.EMT, DataTableNames.MedicalManufacturersDataTable)
        @Html.IndexDatatableRestor(Permissions.MedicalManufacturer.Restore, Apps.EMT, DataTableNames.MedicalManufacturersDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.MedicalManufacturersDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MedicalManufacturersDataTable, Area = "EMT", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

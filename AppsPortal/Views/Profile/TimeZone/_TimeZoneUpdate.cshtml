@model string
<div class="forms-fadeIn">
    @using (Html.BeginForm("TimeZone", "Profile", FormMethod.Post, new { id = "TimeZoneForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="row section EditSection">
            <div class="col-lg-2 col-md-4 col-sm-4 col-xs-4 text-right pull-right col-nopadding-left">
                <div class="panel-action">
                    @Html.DoneLink()
                </div>
            </div>
            <div class="col-lg-2 col-md-8 col-sm-8 col-xs-8">
                <h3 class="Title">@resxDbFields.TimeZone</h3>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breath-bottom">
                            @Html.Label("TimeZone",resxDbFields.TimeZone , new { @class = "SubTitle" })
                            @Html.DropDownList("TimeZone", new DropDownList().TimeZones(Model), new { @class = "form-control select2-basic-search", style = "width:100%" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

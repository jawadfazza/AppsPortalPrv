@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter",DataTableNames.OrganizationInstanceLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.OrganizationInstanceLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer",DataTableNames.OrganizationInstanceLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.OrganizationInstanceLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.OrganizationsInstances.Create, Apps.CMS, Url.Action("OrganizationInstanceLanguageCreate", "Codes", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.OrganizationsInstances.Delete, Apps.CMS, DataTableNames.OrganizationInstanceLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.OrganizationsInstances.Restore, Apps.CMS, DataTableNames.OrganizationInstanceLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.OrganizationInstanceLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.OrganizationInstanceLanguagesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
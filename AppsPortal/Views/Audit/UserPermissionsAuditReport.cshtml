@{
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

@Html.PageHeader("e52c3cd6-983e-4e9a-8acd-b0321cd66c9d")

<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.UserPermissionsAuditDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FullName, DbColumnName = "FullName", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.EmailAddress, DbColumnName = "EmailAddress", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ApplicationGUID, DbColumnName = "ApplicationGUID", FilterForDataType = "Text", DataList = new DropDownList().Applications(), IsMultiple = true, MustHasInitValue = false })
            </div>
            <div class="col-lg-12">
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.UserPermissionsAuditDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.UserPermissionsAuditDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.UserPermissionsAuditDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.UserPermissionsAuditDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.UserPermissionsAuditDataTable, FormController = "Audit", Type = DataTableTypes.Index, EditMode = DataTableEditMode.NoCheckBox, OrderBy = 1 })
    </div>
</div>
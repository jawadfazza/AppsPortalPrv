@model MasterRecordStatus
<h3 class="Title">Operations</h3>
<div class="row">
    <div class="col-lg-7 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.TelecomCompanyOperationsDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.TelecomCompanyOperationsDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.TelecomCompanyOperationsDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.TelecomCompanyOperationsDataTable)
                @Html.FieldDataTableCreate(Permissions.TelecomCompanies.Create, Apps.TBS, Url.Action("TelecomCompanyOperationCreate", "Configuration", new { Area = "TBS", FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.TelecomCompanies.Delete, Apps.TBS, DataTableNames.TelecomCompanyOperationsDataTable)
                @Html.FieldDataTableRestore(Permissions.TelecomCompanies.Restore, Apps.TBS, DataTableNames.TelecomCompanyOperationsDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.TelecomCompanyOperationsDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.TelecomCompanyOperationsDataTable, FormController = "Configuration", Area = "TBS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.LocationLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.LocationLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.LocationLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.LocationLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.Locations.Create, Apps.CMS, Url.Action("LocationLanguageCreate", "Codes", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.Locations.Delete, Apps.CMS, DataTableNames.LocationLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.Locations.Restore, Apps.CMS, DataTableNames.LocationLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.LocationLanguagesDataTable)           
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.LocationLanguagesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
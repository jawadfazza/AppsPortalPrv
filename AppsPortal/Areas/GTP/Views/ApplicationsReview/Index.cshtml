@{
    ViewBag.Title = "Applications";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("39198147-9193-4812-b03f-4e1b5ed4005d")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.GroupTwoApplicationsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FullName, DbColumnName = "FullName", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.IsReviewed, DbColumnName = "IsReviewed", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = false, DataList = new DropDownList().GTPYesNo() })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.GTPEligibility, DbColumnName = "IsEligible", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = false, DataList = new DropDownList().GTPYesNo() })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.GTPP11Status, DbColumnName = "IsConfirmedByUser", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = false, DataList = new DropDownList().GTPCompleted() })
            </div>
            <div id="div-gtpcategory-filter" class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.GTPCategoryGUID, DbColumnName = "GTPCategoryGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, DataList = new DropDownList().GTPCategories() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.GroupTwoApplicationsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.GroupTwoApplicationsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.GroupTwoApplicationsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.GroupTwoApplicationsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.GroupTwoApplicationsDataTable, FormController = "ApplicationsReview", Area = "GTP", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#div-gtpcategory-filter').find('.FilterField');
            $('#div-gtpcategory-filter').find('.FilterField').children().eq(2);
            $('#div-gtpcategory-filter').find('.FilterField').children().eq(2).removeClass().addClass('col-lg-8');
        });
    </script>
}
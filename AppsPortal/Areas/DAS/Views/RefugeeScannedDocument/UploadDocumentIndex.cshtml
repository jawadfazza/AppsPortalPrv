@{
    ViewBag.Title = "RefugeeScannedDocuments";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("f3ea00b0-ed7c-4091-bd48-e859c6debb51")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.RefugeeUploadScannedDocumentDataTable)
         class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FileNumber, DbColumnName = "FileNumber", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastFlowStatusName, DbColumnName = "LastFlowStatusGUID", FilterForDataType = "Text", DataList = new DropDownList().DASFileMovementStatus(), IsMultiple = true, IsSearchable = true })
            </div>
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastCustodianType, DbColumnName = "LastCustodianTypeGUID", FilterForDataType = "Text", DataList = new DropDownList().DASDocumentCustodianType(), IsMultiple = true, IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastCustodianTypeName, DbColumnName = "LastCustodianTypeNameGUID", FilterForDataType = "Text", DataList = new DropDownList().DASUsersTransferAuthorized(), IsMultiple = true, IsSearchable = true })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.TransferLocationGUID, DbColumnName = "TransferLocationGUID", FilterForDataType = "Text", DataList = new DropDownList().DASFileTransferLocation(), IsMultiple = true, IsSearchable = true })

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LatestAppointmentDate, DbColumnName = "LatestAppointmentDate", FilterForDataType = "Date" })
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Cases, DbColumnName = "Cases", FilterForDataType = "Text" })*@

            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Cases, DbColumnName = "Cases", FilterForDataType = "Text" })*@
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.RefugeeUploadScannedDocumentDataTable)
        </div>
    </div>
    <br />
    <div id="@string.Format("{0}ActionsContainer", DataTableNames.RefugeeUploadScannedDocumentDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.RefugeeUploadScannedDocumentDataTable)
        @Html.FieldDataTableUpload(Permissions.RefugeeScannedDocument.Create, Apps.DAS, Url.Action("SearchBulkFile", "ScanDocument"))

        @Html.IndexDatatableReminderPendingConfirmationBulkFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, DataTableNames.RefugeeUploadScannedDocumentDataTable)
        @Html.IndexDatatableReminderReturnBulkFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, DataTableNames.RefugeeUploadScannedDocumentDataTable)

        @Html.IndexDatatableRequestBulkPhysicalFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, Url.Action("GetRequestBulkPhysicalFilesFromUpload", "ScanDocument"))
        @Html.IndexDatatableTransferBulkPhysicalFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, Url.Action("TransferBulkPhysicalFilesFromUpload", "ScanDocument"))
        @Html.IndexDatatableCancelTransferPhysicalFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, Url.Action("GetCancelTransferBulkFiles", "ScanDocument"))


        @*@Html.IndexDatatableRefresh(DataTableNames.RefugeeUploadScannedDocumentDataTable)*@
        @*@Html.FieldDataTableUpload(Permissions.RefugeeScannedDocument.Create, Apps.DAS, Url.Action("UploadFiles", "ScanDocument"))*@
    </div>
    <br />
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.RefugeeUploadScannedDocumentDataTable, Area = "DAS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>




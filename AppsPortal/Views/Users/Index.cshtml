@{
    ViewBag.Title = "Countries";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("e2e32a8d-138c-4320-b9d1-9ba289a6d379")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.UsersDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FullName, DbColumnName = "FullName", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.EmailAddress, DbColumnName = "EmailAddress", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationGUID, DbColumnName = "DutyStationGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsSearchable = true, DataList = new DropDownList().DutyStations() })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationInstanceGUID, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsSearchable = true, DataList = new DropDownList().OrganizationsInstances() })

            </div>

            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.AccountExpiredOn, DbColumnName = "AccountExpiredOn", FilterForDataType = FilterDataTypes.Date })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastLogIn, DbColumnName = "LastLogIn", FilterForDataType = FilterDataTypes.Date })

            </div>
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })

            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.UsersDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.UsersDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.UsersDataTable)
        @Html.IndexDatatableCreate(Permissions.UserAccountsManagement.Create, Apps.CMS, Url.Action("Users/Create/", "Codes"), "")
        @Html.IndexDatatableDelete(Permissions.UserAccountsManagement.Delete, Apps.CMS, DataTableNames.UsersDataTable)
        @Html.IndexDatatableRestor(Permissions.UserAccountsManagement.Restore, Apps.CMS, DataTableNames.UsersDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.UsersDataTable)

    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.UsersDataTable, FormController = "Users", Area = "", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

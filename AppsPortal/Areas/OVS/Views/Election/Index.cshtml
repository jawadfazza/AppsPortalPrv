@{
    ViewBag.Title = "Election";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("ca72985a-0427-4f83-98d6-34b933c60bc7")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.ElectionsDataTable) class="filter-section" style="display: none;" DefaultButton="btnFind">
        <div class="row">
        <div class="col-lg-12">
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.Title, DbColumnName = "Title", FilterForDataType = FilterDataTypes.Text})
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.TimeZone, DbColumnName = "TimeZone", FilterForDataType = "Text", DataList = new DropDownList().TimeZones(), IsMultiple = false, MustHasInitValue = false})
        </div>
        <div class="col-lg-12">
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.StartDate, DbColumnName = "StartDate", FilterForDataType = FilterDataTypes.DateTime})
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.CloseDate, DbColumnName = "CloseDate", FilterForDataType = FilterDataTypes.DateTime})
        </div>
        <div class="col-lg-12">
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.OrganizationInstance, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = "Text", DataList = new DropDownList().OrganizationsInstances(), IsMultiple = false, MustHasInitValue = false ,IsSearchable=true})
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.DutyStation, DbColumnName = "DutyStationGUID", FilterForDataType = "Text", DataList = new DropDownList().DutyStations(), IsMultiple = false, MustHasInitValue = false,IsSearchable=true})
        </div>
        <div class="col-lg-12">
            @Html.Partial("_FilterField", new FilterField {LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus()})
        </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.ElectionsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.ElectionsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ElectionsDataTable)
        @Html.IndexDatatableCreate(Permissions.ElectionsManagement.Create, Apps.OVS, Url.Action("Create/", "Election", new { Area = "OVS" } ))
        @Html.IndexDatatableDelete(Permissions.ElectionsManagement.Delete, Apps.OVS, DataTableNames.ElectionsDataTable)
        @Html.IndexDatatableRestor(Permissions.ElectionsManagement.Restore, Apps.OVS, DataTableNames.ElectionsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ElectionsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ElectionsDataTable, FormController = "Election", Area = "OVS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1})
       
    </div>
</div>

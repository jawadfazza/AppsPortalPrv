@{
    ViewBag.Title = "CDR FTP Locations";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("1fea501d-c27b-4023-855f-06b926d63e10")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.CDRFTPLocationDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationDescription, DbColumnName = "DutyStationGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, DataList = new DropDownList().DutyStations(Guid.Parse("E156C022-EC72-4A5A-BE09-163BD85C68EF")) })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FTPPath, DbColumnName = "FTPPath", FilterForDataType = "Text" })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.CDRFTPLocationDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.CDRFTPLocationDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.CDRFTPLocationDataTable)
        @Html.FieldDataTableCreate(Permissions.CDRFTPLocationsManagement.Create, Apps.TBS, "/TBS/Configuration/CDRFTPLocationCreate")
        @Html.IndexDatatableDelete(Permissions.CDRFTPLocationsManagement.Delete, Apps.TBS, DataTableNames.CDRFTPLocationDataTable)
        @Html.IndexDatatableRestor(Permissions.CDRFTPLocationsManagement.Restore, Apps.TBS, DataTableNames.CDRFTPLocationDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.CDRFTPLocationDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.CDRFTPLocationDataTable, FormController = "Configuration", Area = "TBS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>
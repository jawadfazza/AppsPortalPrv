@{
    ViewBag.Title = "MissionReportForm";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("41b5345b-7e94-4b91-a303-a095b98fae33")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.MissionActionOverviewDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.GovernorateGUID, DbColumnName = "GovernorateGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Governorates(Guid.Parse("699287E8-754D-4A63-B8DD-5344CFBAFD22")), IsMultiple = true, IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.MissionStartDate, DbColumnName = "MissionStartDate", FilterForDataType = "Date" })


            </div>


            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.MissionCode, DbColumnName = "MissionCode", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().IMSMissionFormCode(), IsMultiple = true, IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.MissionStatusGUID, DbColumnName = "MissionStatusGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().MissionStatus(), IsMultiple = true, IsSearchable = true })


            </div>
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CreatedByGUID, DbColumnName = "CreatedByGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Users(true), IsMultiple = true, IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ActionStatusGUID, DbColumnName = "ActionTakenStatus", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().MissionActionTakenStatus(), IsMultiple = true, IsSearchable = true })
            </div>
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.UnitName, DbColumnName = "DepartmentGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().codeDepartments(), IsMultiple = true, IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FocalPoint, DbColumnName = "FocalPointGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().codeUsers(true), IsMultiple = true, IsSearchable = true })
            </div>


        </div>



        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.MissionActionOverviewDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.MissionActionOverviewDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.MissionActionOverviewDataTable)
        @*@Html.IndexDatatableCreateNoPermission("/IMS/MissionForm/Create")*@
        @Html.IndexDatatableDeleteNoPermission(DataTableNames.MissionActionOverviewDataTable)
        @Html.IndexDatatableRestorNoPermission(DataTableNames.MissionActionOverviewDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.MissionActionOverviewDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MissionActionOverviewDataTable, FormController = "MissionReportForm", Area = "IMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>


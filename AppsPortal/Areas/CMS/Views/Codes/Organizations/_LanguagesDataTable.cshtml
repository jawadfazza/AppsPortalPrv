@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-8">
        @if (Model.IsParentActive)
            {
            <div id=@string.Format("{0}Filter",DataTableNames.OrganizationLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.OrganizationLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer",DataTableNames.OrganizationLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.OrganizationLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.Organizations.Create, Apps.CMS, Url.Action("OrganizationLanguageCreate", "Codes", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.Organizations.Delete, Apps.CMS, DataTableNames.OrganizationLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.Organizations.Restore, Apps.CMS, DataTableNames.OrganizationLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.OrganizationLanguagesDataTable)
            </div>
            }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.OrganizationLanguagesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>

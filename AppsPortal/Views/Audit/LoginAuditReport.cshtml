@{
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

@Html.PageHeader("a950c9b3-081b-4170-a583-f5eadcb5638e")

<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.AuditLoginsDataTable) class="filter-section" style="display:none;"  DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FullName, DbColumnName = "FullName", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.EmailAddress, DbColumnName = "EmailAddress", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LoginTime, DbColumnName = "LoginTime", FilterForDataType = FilterDataTypes.DateTime })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LogoutTime, DbColumnName = "LogoutTime", FilterForDataType = FilterDataTypes.DateTime })
            </div>
            <div class="col-lg-12">
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.AuditLoginsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.ActionsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.AuditLoginsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.AuditLoginsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.AuditLoginsDataTable, FormController = "Audit", Type = DataTableTypes.Index, EditMode = DataTableEditMode.NoCheckBox, OrderBy = 1 })
    </div>
</div>
@{
    ViewBag.Title = "JobTitles";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("5b7eba77-71fb-42fd-a260-6267b01e2c96")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.FocalPointsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ApplicationGUID, DbColumnName = "ApplicationGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Applications(), IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DepartmentGUID, DbColumnName = "DepartmentGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Departments(), IsSearchable = true })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationGUID, DbColumnName = "DutyStationGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().DutyStations() ,IsSearchable=true})
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.FocalPointsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.FocalPointsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.FocalPointsDataTable)
        @Html.IndexDatatableCreate(Permissions.FocalPointsManagement.Create, Apps.REF, "/REF/FocalPoints/Create")
        @Html.IndexDatatableDelete(Permissions.FocalPointsManagement.Delete, Apps.REF, DataTableNames.FocalPointsDataTable)
        @Html.IndexDatatableRestor(Permissions.FocalPointsManagement.Restore, Apps.REF, DataTableNames.FocalPointsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.FocalPointsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.FocalPointsDataTable, Area = "REF", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

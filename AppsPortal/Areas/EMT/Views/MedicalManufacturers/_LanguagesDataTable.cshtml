@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.MedicalManufacturerLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.MedicalManufacturerLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.MedicalManufacturerLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.MedicalManufacturerLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.MedicalManufacturer.Create, Apps.EMT, Url.Action("MedicalManufacturerLanguageCreate", "MedicalManufacturers", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.MedicalManufacturer.Delete, Apps.EMT, DataTableNames.MedicalManufacturerLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.MedicalManufacturer.Restore, Apps.EMT, DataTableNames.MedicalManufacturerLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.MedicalManufacturerLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MedicalManufacturerLanguagesDataTable, FormController = "MedicalManufacturers", Area = "EMT", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
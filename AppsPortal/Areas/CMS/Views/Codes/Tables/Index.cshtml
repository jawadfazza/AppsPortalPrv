@{
    ViewBag.Title = "Sitemaps";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("7ac4f058-5f7d-4738-8377-eb1067e4d4de")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.codeTablesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.SitemapDescription, DbColumnName = "DetailsSitemapDesciption", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ActionUrl, DbColumnName = "ActionUrl", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ParentSitemapDescription, DbColumnName = "IndexSitemapDesciption", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.SortID, DbColumnName = "SortID", FilterForDataType = FilterDataTypes.Number })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.codeTablesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.codeTablesDataTable)">
        <button type="button" title="Filter" class="btnFilter btn btn-success" onclick="ToggleFilter('@DataTableNames.codeTablesDataTable');"><i class="fa fa-filter"></i></button>
        @Html.FieldDataTableCreate(Permissions.CodeTables.Create, Apps.CMS, Url.Action("Tables/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.CodeTables.Delete, Apps.CMS, DataTableNames.codeTablesDataTable)
        @Html.IndexDatatableRestor(Permissions.CodeTables.Restore, Apps.CMS, DataTableNames.codeTablesDataTable)
        <button type="button" title="Refresh" class="btnRefresh btn btn-primary" onclick="DataTableRefresh('@DataTableNames.codeTablesDataTable');"><i class="fa fa-refresh"></i></button>
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.codeTablesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Modal, OrderBy = 1 })
    </div>
</div>

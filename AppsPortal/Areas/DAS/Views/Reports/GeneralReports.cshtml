@model FileTrackingReportModel
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("042f6646-c66b-4cc5-9918-2904b31acd22")

@using (Html.BeginForm("ModelTrackFileReport", "Reports", new { Area = "DAS" }, FormMethod.Post, new { id = "ReportForm" }))
{
    <style>
        iframe {
            border-width: 0px !important
        }
    </style>

    <div class="page--content">
        <div class="panel">



            <div class="panel-body">


                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            @Html.Label("Status")
                            @Html.DropDownListFor(model => model.LastFlowStatusGUID, new DropDownList().DASMovementFileStatus(), "", new
                            {
                                style = "width:100%",
                                @class = "form-control select2-basic-search",
                                Multiple = true
                            })
                        </div>
                        @*<div class="form-group">
                            @Html.Label("Unit")
                            @Html.DropDownListFor(model => model.UnitGUID, new DropDownList().WarehouseItems(), "", new
                            {
                                style = "width:100%",
                                @class = "form-control select2-basic-search",
                                Multiple = true
                            })
                        </div>*@
                        <div class="form-group">
                            @Html.Label("Staff")
                            @Html.DropDownListFor(model => model.StaffGUID, new DropDownList().AllStaffUsers(), "", new
                            {
                                style = "width:100%",
                                @class = "form-control select2-basic-search",
                                Multiple = true
                            })
                        </div>
                        <div class="form-group">
                            @Html.Label("Transfer Date(From)")
                            @Html.EditorFor(model => model.TransferFromDate, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                        </div>
                        <div class="form-group">
                            @Html.Label("Transfer Date(To)")
                            @Html.EditorFor(model => model.TransferToDate, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                        </div>

              


                        <div>

                            <input class="btn btn-primary " data-submittype="" type="submit" value="Generate Report">
                        </div>
                    </div>

                </div>



            </div>
        </div>

    </div>
}

@model MasterRecordStatus
<h3 class="Title">@resxPages.MedicalItemTransferDetail</h3>
<div class="row">
    <div class="col-lg-12 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.MedicalItemTransferDetailsDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.MedicalItemTransferDetailsDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.MedicalItemTransferDetailsDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.MedicalItemTransferDetailsDataTable)
                @Html.FieldDataTableCreate(Permissions.MedicalItemTransfer.Create, Apps.EMT, Url.Action("MedicalItemTransferDetailCreate", "MedicalItemTransfers", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.MedicalItemTransfer.Delete, Apps.EMT, DataTableNames.MedicalItemTransferDetailsDataTable)
                @Html.FieldDataTableRestore(Permissions.MedicalItemTransfer.Restore, Apps.EMT, DataTableNames.MedicalItemTransferDetailsDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.MedicalItemTransferDetailsDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MedicalItemTransferDetailsDataTable, FormController = "MedicalItemTransfers", Area = "EMT", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
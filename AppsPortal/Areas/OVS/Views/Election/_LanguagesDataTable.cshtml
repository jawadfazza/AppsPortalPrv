@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.ElectionLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.ElectionLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.ElectionLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.ElectionLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.ElectionsManagement.Create, Apps.OVS, Url.Action( "ElectionLanguageCreate", "Election", new { FK = Model.ParentGUID , Area = "OVS"}))
                @Html.FieldDataTableDelete(Permissions.ElectionsManagement.Delete, Apps.OVS, DataTableNames.ElectionLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.ElectionsManagement.Restore, Apps.OVS, DataTableNames.ElectionLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.ElectionLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ElectionLanguagesDataTable, FormController = "Election", Area = "OVS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
@model ItemRequestUpdateModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@{string PageTitle = (Model.ItemRequestGUID == Guid.Empty) ? "New Request " : "Edit Request "; }

@Html.PageHeader("60f22f53-8b04-498a-beee-4e283dd290e9")
<div class="page--content">
    <div class="forms-fadeIn">
        @Html.Partial("~/Areas/WMS/Views/ItemRequests/_ItemRequestForm.cshtml")
        <div id="ItemRequestDetailsFormControls">
            @if (Model.ItemRequestGUID != Guid.Empty && Model.Active)
            {
                @Html.Partial("~/Areas/WMS/Views/ItemRequestDetails/_ItemRequestDetailsDataTable.cshtml", new MasterRecordStatus { ParentGUID = Model.ItemRequestGUID, IsParentActive = Model.Active })
            }
        </div>
    </div>
</div>


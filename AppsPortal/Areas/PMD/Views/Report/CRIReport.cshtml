@model PMDReportParametersList
@using ReportViewerForMvc;
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("76279b73-c8f5-4f0f-9c26-5ecd134ba233")
<div class="page--content">
    @using (Html.BeginForm("ReportsBoardLoad", "Reports", new { Area = "PMD" }, FormMethod.Post, new { id = "ReportForm" }))
    {
        <br />
        <div class="row">
            @Html.ErrorSummary()
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="height:35px">
                        <h3 class="panel-title" style="color:black;"><b>Report Filters</b> </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <div class="form-group">
                                    @Html.Label("Report Topic")
                                    @Html.DropDownListFor(model => model.Report, new DropDownList().PMDReportTopicRELC(), "", new
                               {
                                   style = "width:100%",
                                   @class = "form-control select2-basic-single",
                               })
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <div class="form-group">
                                    @Html.Label("Start Date")
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <div class="form-group">
                                    @Html.Label("End Date")
                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <div class="form-group">
                                    @Html.Label(resxDbFields.ImplementingPartner)
                                    @Html.DropDownListFor(model => model.OrganizationInstance, new DropDownList().PMDImplementingPartners(), "", new
                               {
                                   multiple = "multiple",
                                   style = "width:100%",
                                   @class = "form-control select2-basic-multiple",
                               })
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <div class="form-group">
                                    @Html.Label(resxDbFields.Governorate)
                                    @Html.DropDownListFor(model => model.Governorate, new DropDownList().PMDGovernorates(), "", new
                               {
                                   multiple = "multiple",
                                   style = "width:100%",
                                   @class = "form-control select2-basic-multiple",

                               })
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="display: flex;margin-top: 25px;">
                                <input class="btn btn-primary " data-submittype="" @*onclick="InitPMDhboards();SubmitForm(this);"*@ type="submit" value="Generate Report">
                                <input type="reset" class="btn btn-default" style="width:50%" value="Clear All" onclick="ClearAll();">
                            </div>
                        </div>



                    </div>
                </div>
            </div>

        </div>
      

     
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">


            <div class="form-group" id="ReportViewer">

            </div>
        </div>
    }

</div>

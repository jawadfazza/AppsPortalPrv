@model MasterRecordStatus
<h3 class="Title">Staff Phones</h3>
<div class="row">
    <div class="col-lg-7 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.StaffPhonesDetailsDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.StaffPhonesDetailsDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.StaffPhonesDetailsDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.StaffPhonesDetailsDataTable)
                @Html.FieldDataTableCreate(Permissions.StaffPhones.Create, Apps.TBS, Url.Action("TelecomCompanyOperationCreate", "Configuration", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.StaffPhones.Delete, Apps.TBS, DataTableNames.StaffPhonesDetailsDataTable)
                @Html.FieldDataTableRestore(Permissions.StaffPhones.Restore, Apps.TBS, DataTableNames.StaffPhonesDetailsDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.StaffPhonesDetailsDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.StaffPhonesDetailsDataTable, FormController = "Configuration", Area = "TBS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
@{
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

@Html.PageHeader("3765bf81-2a22-4aa5-82f2-09244b6b094b")

<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.ApplicationAccessAuditDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FullName, DbColumnName = "FullName", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.EmailAddress, DbColumnName = "EmailAddress", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.AccessedOn, DbColumnName = "AccessedOn", FilterForDataType = FilterDataTypes.DateTime })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ApplicationDescription, DbColumnName = "ApplicationDescription", FilterForDataType = "Text", DataList = new DropDownList().Applications(), IsMultiple = true, MustHasInitValue = false })
            </div>
            <div class="col-lg-12">
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.ApplicationAccessAuditDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.ApplicationAccessAuditDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ApplicationAccessAuditDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ApplicationAccessAuditDataTable)

        <a href="@Url.Action("GenerateFullExcelReport","Audit")" >Generate Full Excel Report</a>
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ApplicationAccessAuditDataTable, FormController = "Audit", Type = DataTableTypes.Index, EditMode = DataTableEditMode.NoCheckBox, OrderBy = 1 })
    </div>
</div>


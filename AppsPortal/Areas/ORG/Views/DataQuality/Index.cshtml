@model List<StaffDataQualityModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

<div class="page--content">
    <br />
    <div class="row">
        <div class="col-md-12">
            <h4>Staff Data Quality Check</h4>
            <table id="tbl-staffQualityTable" class="table table-striped table-bordered" cellspacing="0" width="100%" style="font-size:12px">
                <thead>
                    <tr>
                        <th colspan="1"></th>
                        <th colspan="8">Local DB Data</th>
                        <th colspan="4">Active Directory Data</th>
                    </tr>
                    <tr>
                        <th>Email Address</th>

                        <th>Full Name (EN)</th>
                        <th>Full Name (AR)</th>
                        <th>Dutystation (EN)</th>
                        <th>Dutystation (AR)</th>
                        <th>Department (EN)</th>
                        <th>Department (AR)</th>
                        <th>Job Title (EN)</th>
                        <th>Job Title (AR)</th>

                        <th>Full Name (EN)</th>
                        <th>Dutystation (EN)</th>
                        <th>Department (EN)</th>
                        <th>Job Title (EN)</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td><a href="javascript:void(0)">@Model[i].LocalUser.EmailAddress</a></td>

                            <td>@Model[i].LocalUser.FirstNameEN &nbsp; @Model[i].LocalUser.SurnameEN</td>
                            <td>@Model[i].LocalUser.FirstNameAR &nbsp; @Model[i].LocalUser.SurnameAR</td>
                            <td>@Model[i].LocalUser.DutyStationDescriptionEN</td>
                            <td>@Model[i].LocalUser.DutyStationDescriptionAR</td>
                            <td>@Model[i].LocalUser.DepartmentDescriptionEN</td>
                            <td>@Model[i].LocalUser.DepartmentDescriptionAR</td>
                            <td>@Model[i].LocalUser.JobTitleDescriptionEN</td>
                            <td>@Model[i].LocalUser.JobTitleDescriptionAR</td>

                            <td>@Model[i].ADUser.firstName &nbsp; @Model[i].ADUser.surName</td>
                            <td>@Model[i].ADUser.l</td>
                            <td>@Model[i].ADUser.department</td>
                            <td>@Model[i].ADUser.title</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model TemplateTypeDocumentDataTableModel
@{
    ViewBag.Title = "DangerPay";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("e2394e0a-f2e9-4444-aeef-c21f10c7c2c0")

<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.TemplateTypeDocumentsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DocumentName, DbColumnName = "DocumentName", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.TemplateName, DbColumnName = "TemplateName", FilterForDataType = "Text" })

            </div>
          
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.TemplateTypeDocumentsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.TemplateTypeDocumentsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.TemplateTypeDocumentsDataTable)
        @Html.IndexDatatableCreate(Permissions.DASConfiguration.Create, Apps.DAS, Url.Action("TemplateTypeDocumentCreate", "TemplateConfiguration", new { PK = Model.TemplateTypeGUID}))

        @Html.IndexDatatableRestor(Permissions.DASConfiguration.Restore, Apps.DAS, DataTableNames.TemplateTypeDocumentsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.TemplateTypeDocumentsDataTable)

    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.TemplateTypeDocumentsDataTable, FormController = "TemplateConfiguration", Area = "DAS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, PK= Model.TemplateTypeGUID, OrderBy = 1 })


        @*@Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.TemplateTypeDocumentsDataTable, Area = "DAS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })*@
    </div>
 
    </div>

@model DangerPayInformationModel
@using (Html.BeginForm("NationalStaffDangerPayInformation", "NationalStaffDangerPayCalcualtion", new { Area = "AHD" }, FormMethod.Post, new { id = "NationalStaffDangerPayManagementForm", @class = "main-form", enctype = "multipart/form-data" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.FormHiddenFields(model => model.DangerPayInformationGUID)

        <div class="panel panel-default">

            <div class="panel-body">
                <h3>New Danger Pay Period</h3>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MonthStartDate)
                            @Html.EditorFor(model => model.MonthStartDate, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MonthEndDate)
                            @Html.EditorFor(model => model.MonthEndDate, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })

                        </div>

                        @*<div class="form-group">
                            @Html.LabelFor(model => model.MonthId)
                            @Html.EditorFor(model => model.MonthId, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })

                        </div>*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.DangerPayAmount)
                            @Html.EditorFor(model => model.DangerPayAmount, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastAllowedConfirmationDate)
                            @Html.EditorFor(model => model.LastAllowedConfirmationDate, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })

                        </div>

                    </div>
                   
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer form-footer">
        @if (Model.DangerPayInformationGUID == Guid.Empty)
        {
            @Html.CreateButton(Permissions.NationalStaffDangerPayManagement.Create, Apps.AHD)

    
        }
        else
        {
            if (Model.Active)
            {
                @Html.UpdateButton(Permissions.NationalStaffDangerPayManagement.Update, Apps.AHD)
                @Html.DeleteSwitchButton(Permissions.NationalStaffDangerPayManagement.Delete, Apps.AHD)
            }
            else
            {
                @Html.RestoreSwitchButton(Permissions.NationalStaffDangerPayManagement.Delete, Apps.AHD)
            }
        }
        @Html.CloseModalButton()
    </div>
}


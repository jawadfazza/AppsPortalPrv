@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.MenuLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.MenuLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.MenuLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.MenuLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.NavigationMenus.Create, Apps.CMS, Url.Action("MenuLanguageCreate", "Codes", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.NavigationMenus.Delete, Apps.CMS, DataTableNames.MenuLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.NavigationMenus.Restore, Apps.CMS, DataTableNames.MenuLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.MenuLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MenuLanguagesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
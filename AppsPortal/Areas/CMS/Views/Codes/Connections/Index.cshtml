@{
    ViewBag.Title = "Connections";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("86fb4e47-7322-49ec-bbb4-65e3f8392ee9")
<div class="page--content">
        <div id=@string.Format("{0}Filter", DataTableNames.ConnectionsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.InstanceDescription, DbColumnName = "InstanceDescription", FilterForDataType = "Text" })
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ApplicationDescription, DbColumnName = "ApplicationGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Applications(), IsMultiple = false })

                </div>
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
                </div>
            </div>
            <div class="form-group filter-actions">
                @Html.DatatableFilterControls(DataTableNames.ConnectionsDataTable)
            </div>
        </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.ConnectionsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ConnectionsDataTable)
        @Html.IndexDatatableCreate(Permissions.Connection.Create, Apps.CMS, Url.Action("Connections/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.Connection.Delete, Apps.CMS, DataTableNames.ConnectionsDataTable)
        @Html.IndexDatatableRestor(Permissions.Connection.Restore, Apps.CMS, DataTableNames.ConnectionsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ConnectionsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ConnectionsDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

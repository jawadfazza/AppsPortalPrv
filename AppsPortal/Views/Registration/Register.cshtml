@*Page Name should be Step1.cshtml*@


@model AccountDetailsModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
<div class="page--header">
    <div class="page--banner">
        <h2>@resxPages.RequestNewAccount</h2>
        <div class="row">
            <div class="col-md-5">
                <article>
                   @resxPages.RequestNewAccountArticle
                </article>
            </div>
        </div>
    </div>
</div>
<div class="page--content">
    

    @*<div class="wizard">
        <span class="done">Step 1: Account Details</span>
        <span>Step 2: Email Validation</span>
        <span>Step 3: Organization and Operation Setup</span>
        <span>Step 4: Get Access Approval</span>
        <span>Step 5: Secure Account and Get Ready</span>
    </div>*@
    <br />
    <div class="page--body">
        <h3 class="page--subtitle">@resxPages.Step 1/5</h3>
        @using (Html.BeginForm("Register", "Registration", FormMethod.Post, new { @class = "formControl", id="RegisterForm" }))
        {
            @Html.AntiForgeryToken()
            <div id="ErrorSummary" class="alert alert-danger alert-dismissable fade in" style="display:none;">
                <a  class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Oops! </strong>
                <span id="Error">@Html.Raw(ViewBag.ErrorSummary)</span>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <div class="col-xs-6">
                                    @Html.LabelFor(model => model.FirstName)
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control user-entry-initcap", autocomplete = "off"  } })
                                </div>
                                <div class="col-xs-6">
                                    @Html.LabelFor(model => model.Surname)
                                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control user-entry-initcap", autocomplete = "off" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmailAddress)
                        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TimeZone)
                        @Html.DropDownListFor(model => model.TimeZone, new DropDownList().TimeZones(), "", new { @class = "form-control select2-basic-search" , style = "width:100%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SecurityQuestionGUID)
                        @Html.DropDownListFor(model => model.SecurityQuestionGUID, new DropDownList().SecurityQuestions(), "", new { @class = "form-control select2-basic-single", style = "width:100%"  })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SecurityAnswer)
                        @Html.EditorFor(model => model.SecurityAnswer, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    </div>
                    <div class="form-group">
                        <input class="btn btn-success SLAME ActionControl" onclick="PostbackSubmit(this);" type="submit" value="@resxUIControls.Register">
                        @Html.ActionLink(resxUIControls.BackToLogin, "Index", "Account", null, new { @class = "BackToList" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
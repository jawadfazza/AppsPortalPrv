    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-lg-12">
            @*@Html.Partial("~/Views/Audit/_AuditHandler.cshtml", Url.Action("ApplicationAuditHistory", "Codes", new { RecordGUID = Model.ApplicationGUID }))*@

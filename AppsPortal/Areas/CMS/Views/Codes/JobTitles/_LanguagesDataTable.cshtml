@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.JobTitleLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.JobTitleLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.JobTitleLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.JobTitleLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.JobTitles.Create, Apps.CMS, Url.Action("JobTitleLanguageCreate", "Codes", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.JobTitles.Delete, Apps.CMS, DataTableNames.JobTitleLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.JobTitles.Restore, Apps.CMS, DataTableNames.JobTitleLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.JobTitleLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.JobTitleLanguagesDataTable, FormController = "Codes", Area = "CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
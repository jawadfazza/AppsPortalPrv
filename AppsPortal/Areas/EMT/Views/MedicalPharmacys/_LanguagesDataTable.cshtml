@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.MedicalPharmacyLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.MedicalPharmacyLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.MedicalPharmacyLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.MedicalPharmacyLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.MedicalPharmacy.Create, Apps.EMT, Url.Action("MedicalPharmacyLanguageCreate", "MedicalPharmacys", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.MedicalPharmacy.Delete, Apps.EMT, DataTableNames.MedicalPharmacyLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.MedicalPharmacy.Restore, Apps.EMT, DataTableNames.MedicalPharmacyLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.MedicalPharmacyLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MedicalPharmacyLanguagesDataTable, FormController = "MedicalPharmacys", Area = "EMT", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
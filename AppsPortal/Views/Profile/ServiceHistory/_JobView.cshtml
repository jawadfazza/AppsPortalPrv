@model JobModel
<div class="row" style="border-top:1px solid #eee;">
    <div class="col-lg-12 nopadding" style="margin-top:20px;">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
            <h4 class="factsheet-job">@Html.DisplayFor(x => x.FromDate)</h4>
        </div>
        @*<div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 text-right pull-right">
                <a class='Modal-Link' href='#' data-url='/Profile/JobUpdate/@Model.UserProfileGUID'>Manage</a>
            </div>*@
        <div class="col-lg-9 col-md-9 col-sm-6 col-xs-12">
            <a class='Modal-Link' href='#' data-url='/Profile/JobUpdate/@Model.UserProfileGUID'>
                <h4 class="factsheet-job">@Model.JobTitle</h4>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xm-offset-0 nopadding">
        <div class="col-xs-12 shRecord">
            <div class="col-lg-12">
                <span>@Model.OrganizationInstance</span>
            </div>
        </div>
        <div class="col-xs-12 shRecord">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                <span class="factsheet-label">@resxDbFields.Grade:</span>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-6">
                <span>@Model.Grade</span>
            </div>
        </div>
        <div class="col-xs-12 shRecord">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 ">
                <span class="factsheet-label">@resxDbFields.PositionNumber:</span>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-6">
                <span>@Model.PositionNumber</span>
            </div>
        </div>
        <div class="col-xs-12 shRecord">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 ">
                <span class="factsheet-label">@resxDbFields.DutyStation:</span>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-6">
                <span>@Model.DutyStation</span>
            </div>
        </div>
        <div class="col-xs-12 shRecord">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 ">
                <span class="factsheet-label">@resxDbFields.DepartmentDescription :</span>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-6">
                <span>@Model.Department</span>
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top:10px;">
    <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xm-offset-0" style="margin-top:15px;">
        <div class="col-xs-10">
            <h4 class="factsheet-job">@resxDbFields.UserStepsHistoryGUID</h4>
        </div>
        <div class="col-xs-2 text-right">
            <button type="button" title="Add New Manager" class="Modal-Link btn-xm smallAdd" data-url='/Profile/StepCreate/@Model.UserProfileGUID' style="display: inline-block;"><i class="fa fa-plus"></i></button>
        </div>
        <div id="@string.Format("{0}Step",Model.UserProfileGUID)">
            @Html.Partial("~/Views/Profile/ServiceHistory/_StepsView.cshtml", Model.StepHistoryList)
        </div>
    </div>
</div>
<div class="row" style="margin-top:10px;">
    <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xm-offset-0" style="margin-top:15px;">
        <div class="col-xs-10">
            <h4 class="factsheet-job">@resxDbFields.UserManagersHistoryGUID</h4>
        </div>
        <div class="col-xs-2 text-right">
            <button type="button" title="Add New Manager" class="Modal-Link btn-xm smallAdd" data-url='/Profile/ManagerCreate/@Model.UserProfileGUID' style="display: inline-block;"><i class="fa fa-plus"></i></button>
        </div>
        <div id="@string.Format("{0}Manager",Model.UserProfileGUID)">
            @Html.Partial("~/Views/Profile/ServiceHistory/_ManagersView.cshtml", Model.ManagerHistoryList)
        </div>
    </div>
</div>
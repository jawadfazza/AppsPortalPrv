@{
    ViewBag.Title = "Sitemaps";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("7ce55ff7-480d-4e67-9977-6c6ebbd4df66")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.SitemapsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.SitemapDescription, DbColumnName = "SitemapDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ActionUrl, DbColumnName = "ActionUrl", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ParentSitemapDescription, DbColumnName = "ParentDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.SortID, DbColumnName = "SortID", FilterForDataType = FilterDataTypes.Number })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.SitemapsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.SitemapsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.SitemapsDataTable)
        @Html.IndexDatatableCreate(Permissions.Sitemap.Create, Apps.CMS, Url.Action("Sitemaps/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.Sitemap.Delete, Apps.CMS, DataTableNames.SitemapsDataTable)
        @Html.IndexDatatableRestor(Permissions.Sitemap.Restore, Apps.CMS, DataTableNames.SitemapsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.SitemapsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.SitemapsDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

@model HelpDeskModel

@Html.HiddenFor(model => model.HelpDeskBugReportModel.AppBugReportGUID)
@Html.HiddenFor(model => model.HelpDeskBugReportModel.HelpDeskGUID)
@Html.HiddenFor(model => model.HelpDeskBugReportModel.Active)
@Html.HiddenFor(model => model.HelpDeskBugReportModel.dataAppBugReportRowVersion)

<div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Details</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.HelpDeskBugReportModel.ApplicationGUID)
                @Html.DropDownListFor(model => model.HelpDeskBugReportModel.ApplicationGUID, new DropDownList().Applications(), "", new { @class = "form-control select2-basic-search", style = "width:100%" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HelpDeskBugReportModel.BugDetails)
                @Html.TextAreaFor(model => model.HelpDeskBugReportModel.BugDetails, new { @class = "form-control", autocomplete = "off", @style = "width:100%;", @rows = 5 })
            </div>
        </div>
    </div>

</div>

<div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Resolution</h3>
        </div>
        <div class="panel-body">
            @if (Model == null || Model.HelpDeskBugReportAuthorizationModel == null)
            {
            <div class="alert alert-warning" role="alert">
                Awaiting acceptance.
            </div>
            }
            else
            {
                <div class="row">
                    <div class="col-sm-12 col-xs-12">

                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.ApprovalStatusGUID:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.ApprovalStatusDescription</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.ApprovalComments:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.ApprovalComments</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.EstimatedResourcesNum:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.EstimatedResourcesNum</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.EstimatedTime:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.EstimatedTimeDescription</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.AssignedToGUID:&nbsp;<b>@Model.AssignedToFullName</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.BugFixStartDate:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.BugFixStartDate</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.BugFixEndDate:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.BugFixEndDate</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.BugAnalysis:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.BugAnalysis</b></h5>
                        </div>
                        <div class="breath-bottom">
                            <h5 class="SubTitle">@resxDbFields.BugResolution:&nbsp;<b>@Model.HelpDeskBugReportAuthorizationModel.BugResolution</b></h5>
                        </div>

                    </div>

                </div>
            }
        </div>
    </div>
</div>

<div class="modal" id="ConfirmModal" tabindex="-1" role="alert" aria-hidden="true" style="display: none;">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center" role="document">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                        <h4 id="ModalTitle" class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                        <i id="ModalIcon" class=""></i>
                        <span id="ModalMessage"></span>
                    </div>
                    <div class="modal-footer">
                        <input id="btnConfirm" type="submit" class="btn" onclick="SubmitForm(this)" value="" />
                        <button data-dismiss="modal" type="button" class="btn btn-default ModalCancel">@resxUIControls.Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
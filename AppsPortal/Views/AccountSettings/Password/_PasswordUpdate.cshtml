@model  ChangePasswordModel
<div class="forms-fadeIn abc">
    @using (Html.BeginForm("ChangePassword", "AccountSettings", FormMethod.Post, new { id = "ChangePasswordForm" }))
    {
        <div class="row section">
                <div class="col-lg-10">
                    <h3 class="Title EditTitle">@resxPages.ChangePassword</h3>
                    @Html.AntiForgeryToken()
                    @Html.ErrorSummary()
                </div>
                <div class="col-lg-2 text-right">
                    <a class="btn Edit-Link" onclick="CancelEditSection(this, '@Url.Action("ChangePasswordView","AccountSettings")', 'PanelForAccountPassword');">Close</a>
                </div>
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" >
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.CurrentPassword, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control password-strength", autocompelete = "new-password", data_class = "pwdStrength" } })
                        </div>
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control"} })
                        </div>
                        <div class="form-group form-footer">
                            @Html.UpdateButton()
                            <a class="btn btn-default" onclick="CancelEditSection(null, '@Url.Action("ChangePasswordView","AccountSettings")', 'PanelForAccountPassword');">Close</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.MissionStatusGUID, DbColumnName = "MissionStatusGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().MissionStatus(), IsMultiple = true, IsSearchable = true })


@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("6ffd5528-a577-41e3-960a-013d152dbab1")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.DepartmentsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DepartmentDescription, DbColumnName = "DepartmentDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DepartmentCode, DbColumnName = "DepartmentCode", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.SortID, DbColumnName = "SortID", FilterForDataType = FilterDataTypes.Number })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.DepartmentsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.DepartmentsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.DepartmentsDataTable)
        @Html.IndexDatatableCreate(Permissions.Departments.Create, Apps.CMS, Url.Action("Departments/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.Departments.Delete, Apps.CMS, DataTableNames.DepartmentsDataTable)
        @Html.IndexDatatableRestor(Permissions.Departments.Restore, Apps.CMS, DataTableNames.DepartmentsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.DepartmentsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.DepartmentsDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

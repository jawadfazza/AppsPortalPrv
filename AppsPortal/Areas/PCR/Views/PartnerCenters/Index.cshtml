@{
    ViewBag.Title = "JobTitles";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("9ca178b5-96a8-4e65-ad6d-caf40cbd9720")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.PartnerCentersDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CommunityCenters, DbColumnName = "PartnerCenterDescription", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Governorate, DbColumnName = "DutyStationGUID", FilterForDataType = "Options", DataList = new DropDownList().DutyStationsByProfile(), IsMultiple = true })

            </div>

            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Partner, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = "Options", DataList = new DropDownList().OrganizationsInstancesAcronymByProfile(), IsMultiple = true })

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.PartnerCentersDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format(" {0}ActionsContainer", DataTableNames.PartnerCentersDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.PartnerCentersDataTable)
        @Html.IndexDatatableCreate(Permissions.CommunityCenterCode.Create, Apps.PCR, "/PCR/PartnerCenters/Create")
        @Html.IndexDatatableDelete(Permissions.CommunityCenterCode.Delete, Apps.PCR, DataTableNames.PartnerCentersDataTable)
        @Html.IndexDatatableRestor(Permissions.CommunityCenterCode.Restore, Apps.PCR, DataTableNames.PartnerCentersDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.PartnerCentersDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.PartnerCentersDataTable, Area = "PCR", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

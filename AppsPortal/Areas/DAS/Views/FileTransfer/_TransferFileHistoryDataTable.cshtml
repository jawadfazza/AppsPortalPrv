@model MasterRecordStatus
<h3 class="Title">Transfer History</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.FileTransferHistoryDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.FileTransferHistoryDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.FileTransferHistoryDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.FileTransferHistoryDataTable)
                @*@Html.FieldDataTableCreate(Permissions.RefugeeScannedDocument.Create, Apps.DAS, Url.Action("ItemModelWarehouseCreate", "ItemModels", new { FK = Model.ParentGUID }))*@
                @*@Html.FieldDataTableDelete(Permissions.RefugeeScannedDocument.Delete, Apps.DAS, DataTableNames.FileTransferHistoryDataTable)*@
                @Html.FieldDataTableRestore(Permissions.RefugeeScannedDocument.Restore, Apps.DAS, DataTableNames.FileTransferHistoryDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.FileTransferHistoryDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.FileTransferHistoryDataTable, FormController = "ScanDocument", Area = "DAS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
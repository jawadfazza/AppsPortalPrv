@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.FocalPointStaffsDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.FocalPointStaffsDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.FocalPointStaffsDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.FocalPointStaffsDataTable)
                @Html.FieldDataTableCreate(Permissions.FocalPointsManagement.Create, Apps.REF, Url.Action("FocalPointStaffCreate", "FocalPoints", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.FocalPointsManagement.Delete, Apps.REF, DataTableNames.FocalPointStaffsDataTable)
                @Html.FieldDataTableRestore(Permissions.FocalPointsManagement.Restore, Apps.REF, DataTableNames.FocalPointStaffsDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.FocalPointStaffsDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.FocalPointStaffsDataTable, FormController = "FocalPoints", Area = "REF", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
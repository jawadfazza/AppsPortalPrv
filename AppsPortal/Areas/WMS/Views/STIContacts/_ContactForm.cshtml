@model STIContactsUpdateModel


@using (Html.BeginForm("STIContacts", "STIContacts", new { Area = "WMS" }, FormMethod.Post, new { id = "ModelEntryDetailForm", @class = "main-form" }))
{
    string ModalTitle = "New Contact";
    @Html.Partial("_ModalHeader", ModalTitle)
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.StaffinformationID)
    

        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FullName)
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName)
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>


                </div>
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group HANDLER">
                            @Html.LabelFor(model => model.FamilyName)
                            @Html.EditorFor(model => model.FamilyName, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="col-md-6">

                            <div class="form-group HANDLER">
                                @Html.LabelFor(model => model.DepartmentName)
                                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                            </div>

                        </div>


                    </div>

                </div>
        
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group HANDLER">
                            @Html.LabelFor(model => model.Governorate)
                            @Html.EditorFor(model => model.Governorate, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="form-group HANDLER">
                            @Html.LabelFor(model => model.DutyStation)
                            @Html.EditorFor(model => model.DutyStation, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group HANDLER">
                            @Html.LabelFor(model => model.Mobile1)
                            @Html.EditorFor(model => model.Mobile1, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="form-group HANDLER">
                            @Html.LabelFor(model => model.Emailwork)
                            @Html.EditorFor(model => model.Emailwork, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
                        </div>

                    </div>
                </div>
            
     
            </div>
        </div>
    </div>


    <div class="modal-footer form-footer">
        @if (Model.StaffinformationID == null)
        {
            @Html.CreateButton(Permissions.STIContacts.Create, Apps.WMS)
        }
       
        
        @Html.CloseModalButton()
    </div>



}




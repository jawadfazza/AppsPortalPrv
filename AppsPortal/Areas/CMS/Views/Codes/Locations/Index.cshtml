@{
    ViewBag.Title = "Locations";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("c31fa356-7935-4c35-b979-fe56f54eb0ce")
<div class="page--content">
        <div id=@string.Format("{0}Filter", DataTableNames.LocationsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LocationDescription, DbColumnName = "LocationDescription", FilterForDataType = FilterDataTypes.Text })
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CountryGUID, DbColumnName = "CountryGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Countries(), IsMultiple = true, MustHasInitValue = false })
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LocationTypeGUID, DbColumnName = "LocationTypeGUID", FilterForDataType = "Text", DataList = new DropDownList().LocationTypes(), IsMultiple = true })
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
                </div>
            </div>
            <div class="form-group filter-actions">
                @Html.DatatableFilterControls(DataTableNames.LocationsDataTable)
            </div>
        </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.LocationsDataTable)">
        @Html.FieldDataTableFilter(DataTableNames.LocationsDataTable)
        @Html.IndexDatatableCreate(Permissions.Locations.Create, Apps.CMS, Url.Action("Locations/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.Locations.Delete, Apps.CMS, DataTableNames.LocationsDataTable)
        @Html.IndexDatatableRestor(Permissions.Locations.Restore, Apps.CMS, DataTableNames.LocationsDataTable)
        @Html.FieldDataTableRefresh(DataTableNames.LocationsDataTable)    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.LocationsDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 2 })
    </div>
</div>

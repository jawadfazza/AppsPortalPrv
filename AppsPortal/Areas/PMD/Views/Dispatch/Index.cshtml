@{
    ViewBag.Title = "Dispatchs";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("380cd9c0-8ed8-4eb9-92fd-2491ccb65499")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.DispatchDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationInstanceGUID, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().PMDImplementingPartners(), IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.GovernorateGUID, DbColumnName = "GovernorateGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().PMDGovernorates(), IsSearchable = true })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DispatchDate, DbColumnName = "DispatchDate", FilterForDataType = "Date" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.DispatchDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.DispatchDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.DispatchDataTable)
        @Html.IndexDatatableCreate(Permissions.PMDDispatch.Create, Apps.PMD, "/PMD/Dispatch/Create")
        @Html.IndexDatatableDelete(Permissions.PMDDispatch.Delete, Apps.PMD, DataTableNames.DispatchDataTable)
        @Html.IndexDatatableRestor(Permissions.PMDDispatch.Restore, Apps.PMD, DataTableNames.DispatchDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.DispatchDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.DispatchDataTable, Area = "PMD", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

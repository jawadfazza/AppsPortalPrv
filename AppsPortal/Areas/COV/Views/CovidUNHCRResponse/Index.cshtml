@{
    ViewBag.Title = "Covid-19 UNHCR Response";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

@Html.PageHeader("c4534c6f-39c6-4495-895e-ce07430965ea")

@*<div class="page--content">*@
<div class="row">
    <div class="col-md-12" style="margin-left: 25px;padding-right: 25px;width: 98%;">
        <div id=@string.Format("{0}Filter",DataTableNames.CovidUNHCRResponseDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ObjectiveGUID, DbColumnName = "ObjectiveGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsMultiple = true, DataList = new DropDownList().COVObjectives() })
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OutputGUID, DbColumnName = "OutputGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsMultiple = true, DataList = new DropDownList().COVOutputs() })
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.IndicatorGUID, DbColumnName = "IndicatorGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsMultiple = true, DataList = new DropDownList().COVIndicators() })
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Governorate, DbColumnName = "admin1PCode", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsMultiple = true, DataList = new DropDownList().COVGovernorates() })
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CovStatus, DbColumnName = "CovStatus", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsMultiple = true, DataList = new DropDownList().COVStatuses() })
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DateOfReport, DbColumnName = "DateOfReport", FilterForDataType = FilterDataTypes.DateTime })
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
                </div>
            </div>
            <div class="form-group filter-actions">
                @Html.DatatableFilterControls(DataTableNames.CovidUNHCRResponseDataTable)
            </div>
        </div>
        <div class="dt-controls-index" id="@string.Format(" {0}ActionsContainer",DataTableNames.CovidUNHCRResponseDataTable)">
            @Html.IndexDatatableFilter(DataTableNames.CovidUNHCRResponseDataTable)
            @Html.IndexDatatableCreate(Permissions.COVIDUNHCRResponse.Create, Apps.COV, Url.Action("/Create/", "CovidUNHCRResponse", new { Area = "COV" }))
            @Html.IndexDatatableDelete(Permissions.COVIDUNHCRResponse.Delete, Apps.COV, DataTableNames.CovidUNHCRResponseDataTable)
            @Html.IndexDatatableRestor(Permissions.COVIDUNHCRResponse.Restore, Apps.COV, DataTableNames.CovidUNHCRResponseDataTable)
            @Html.IndexDatatableRefresh(DataTableNames.CovidUNHCRResponseDataTable)
            @if (new CMS().HasAction(Permissions.COVIDRecordVerify.Create, Apps.COV))
            {
                <a class='Modal-Link btn btn-primary' style="width:270px" href='javascript:void(0)' data-url="/COV/CovidUNHCRResponse/Verify">Bulk verify selected record</a>
            }
            <a href="/COV/CovidUNHCRResponse/GenerateExcelVersion" style="width:270px;color:white;" class="btn btn-primary">Generate Excel Version</a>
        </div>
        <div class="page--body">
            @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.CovidUNHCRResponseDataTable, FormController = "CovidUNHCRResponse", Area = "COV", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
        </div>
    </div>
</div>
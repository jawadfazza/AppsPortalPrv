@{
    ViewBag.Title = "RefugeeScannedDocuments";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("f67ea00e-17eb-43be-b1d5-988d79216b73")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FileNumber, DbColumnName = "FileNumber", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastFlowStatusName, DbColumnName = "LastFlowStatusGUID", FilterForDataType = "Text", DataList = new DropDownList().DASFileMovementStatus(), IsMultiple = true, IsSearchable = true })
            </div>
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastCustodianType, DbColumnName = "LastCustodianTypeGUID", FilterForDataType = "Text", DataList = new DropDownList().DASDocumentCustodianType(), IsMultiple = true, IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.LastCustodianTypeName, DbColumnName = "LastCustodianTypeNameGUID", FilterForDataType = "Text", DataList = new DropDownList().Users(true), IsMultiple = true, IsSearchable = true })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.AppointmentDate, DbColumnName = "AppointmentDate", FilterForDataType = "Date" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable)
        
        @Html.IndexDatatableReminderPendingConfirmationBulkFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable)
        @Html.IndexDatatableReminderReturnBulkFiles(Permissions.RefugeeScannedDocument.Create, Apps.DAS, DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable)

        
        @*@Html.IndexDatatableCreate(Permissions.RefugeeScannedDocument.Create, Apps.DAS, "/DAS/RefugeeScannedDocument/Create/")*@
      
        @Html.IndexDatatableRefresh(DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.RefugeeCasesHaveScheduledAppointmentDataTable, Area = "DAS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
        
    </div>
</div>
    
@{
    ViewBag.Title = "MissionRequest";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("51523654-c6d7-4a3a-b457-ddc544f551f4")

<div class="page--content"> 

    <div id=@string.Format("{0}Filter", DataTableNames.StaffAllMissionRequestDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ReferenceNumber, DbColumnName = "ReferenceNumber", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Status, DbColumnName = "LastFlowStatusGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().StaffMissionFlowStatus(), IsMultiple = true })


            </div>

            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationGUID, DbColumnName = "DutyStationGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().SyriaDutyStations(), IsMultiple = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.StaffName, DbColumnName = "StaffGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().AdminHRAllStaff(), IsMultiple = true })


            </div>

        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.StaffAllMissionRequestDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.StaffAllMissionRequestDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.StaffAllMissionRequestDataTable)
        
        
        @Html.IndexDatatableDelete(Permissions.StaffMissionRequest.Delete, Apps.AHD, DataTableNames.StaffAllMissionRequestDataTable)
        @Html.IndexDatatableRestor(Permissions.StaffMissionRequest.Restore, Apps.AHD, DataTableNames.StaffAllMissionRequestDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.StaffAllMissionRequestDataTable)
        @*@Html.ActionLink(" ", "ExportDangerPayStaffForMonth", "NationalStaffDangerPayCalcualtion", new { id = @ViewBag.DangerPayInformationGUID }, new { @class = "btn btn-primary fa fa-file-o" })*@

    </div>
 
    
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.StaffAllMissionRequestDataTable, Area = "AHD", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
        
    </div>


</div>

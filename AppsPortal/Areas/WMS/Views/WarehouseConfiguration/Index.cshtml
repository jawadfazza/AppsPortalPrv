@Html.PageHeader("ba9fd84b-2248-4101-9b93-9ececa8d1780")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.WarehousesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.WarehouseGUID, DbColumnName = "Warehouse", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ItemDescription, DbColumnName = "ItemDescription", FilterForDataType = "Text" })
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationDescription, DbColumnName = "DutyStationGUID", FilterForDataType = "Options", DataList = new DropDownList().DutyStationsByProfile(), IsMultiple = true })*@
                    
            </div>

            <div class="col-lg-12">
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationInstanceDescription, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = "Options", DataList = new DropDownList().OrganizationsInstancesByProfile(), IsMultiple = true })*@

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.WarehousesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.WarehousesDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.WarehousesDataTable)
        @Html.IndexDatatableCreate(Permissions.STIConfiguration.Create, Apps.WMS, "/WMS/Warehouses/Create")
        @Html.IndexDatatableDelete(Permissions.STIConfiguration.Delete, Apps.WMS, DataTableNames.WarehousesDataTable)
        @Html.IndexDatatableRestor(Permissions.STIConfiguration.Restore, Apps.WMS, DataTableNames.WarehousesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.WarehousesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.WarehousesDataTable, Area = "WMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

@{
    ViewBag.Title = "Offices";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("2b8c1df5-ec71-4692-b9cd-a611d0d562a4")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.OfficesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OfficeDescription, DbColumnName = "OfficeDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CountryGUID, DbColumnName = "CountryGUID", FilterForDataType = "Text", DataList = new DropDownList().Countries(), IsMultiple = false, MustHasInitValue = false })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OfficeTypeGUID, DbColumnName = "OfficeTypeGUID", FilterForDataType = "Text", DataList = new DropDownList().OfficeTypes(), IsMultiple = false, MustHasInitValue = false })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OfficeAddress, DbColumnName = "OfficeAddress", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.OfficesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.OfficesDataTable)">

        @Html.IndexDatatableFilter(DataTableNames.OfficesDataTable)
        @Html.IndexDatatableCreate(Permissions.Offices.Create, Apps.CMS, Url.Action("Offices/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.Offices.Delete, Apps.CMS, DataTableNames.OfficesDataTable)
        @Html.IndexDatatableRestor(Permissions.Offices.Restore, Apps.CMS, DataTableNames.OfficesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.OfficesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.OfficesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

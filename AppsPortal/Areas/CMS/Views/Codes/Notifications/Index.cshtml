@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("abea7deb-51a6-482f-98bb-e64cef887fc1")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.NotificationsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.TitleTemplete, DbColumnName = "TitleTemplete", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ApplicationDescription, DbColumnName = "ApplicationGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().Applications(), IsMultiple = false })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.NotificationsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.NotificationsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.NotificationsDataTable)
        @Html.IndexDatatableCreate(Permissions.Notifications.Create, Apps.CMS, Url.Action("Notifications/Create/", "Codes", new { Area = "CMS" }))
        @Html.IndexDatatableDelete(Permissions.Notifications.Delete, Apps.CMS, DataTableNames.NotificationsDataTable)
        @Html.IndexDatatableRestor(Permissions.Notifications.Restore, Apps.CMS, DataTableNames.NotificationsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.NotificationsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.NotificationsDataTable, FormController = "Codes", Area = "CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

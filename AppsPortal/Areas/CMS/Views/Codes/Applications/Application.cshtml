@{string PageTitle = (Model.ApplicationGUID == Guid.Empty) ? "New Application" : "Edit Application"; }
<div class="page--content">
    <div class="forms-fadeIn">
        @Html.Partial("~/Areas/CMS/Views/Codes/Applications/_ApplicationForm.cshtml")

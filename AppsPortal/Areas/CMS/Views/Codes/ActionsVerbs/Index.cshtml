@{
    ViewBag.Title = "ActionsVerbs";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("e5d0829f-2a6e-44da-b0d7-222db69018de")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.ActionsVerbsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ActionVerbDescription, DbColumnName = "ActionVerbDescription", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-ActionsVerbs">
            @Html.DatatableFilterControls(DataTableNames.ActionsVerbsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.ActionsVerbsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ActionsVerbsDataTable)
        @Html.IndexDatatableCreate(Permissions.ActionsVerbs.Create, Apps.CMS, Url.Action("ActionsVerbs/Create", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.ActionsVerbs.Delete, Apps.CMS, DataTableNames.ActionsVerbsDataTable)
        @Html.IndexDatatableRestor(Permissions.ActionsVerbs.Restore, Apps.CMS, DataTableNames.ActionsVerbsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ActionsVerbsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ActionsVerbsDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

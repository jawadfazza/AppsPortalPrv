@{
    ViewBag.Title = "JobTitles";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("2f53a3b0-94c0-473f-af47-43439fd0449e")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.CardPrintsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CaseNumber, DbColumnName = "CaseNumber", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.CardPrintsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.CardPrintsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.CardPrintsDataTable)
        @Html.FieldDataTableDelete(Permissions.CardIssued.Delete, Apps.IDC, DataTableNames.CardPrintsDataTable)
        @Html.FieldDataTableRestore(Permissions.CardIssued.Restore, Apps.IDC, DataTableNames.CardPrintsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.CardPrintsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.CardPrintsDataTable, Area = "IDC", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

<script>
    var myVar = setInterval(myTimer, 60000);
    function myTimer() {
        DataTableRefresh('CardPrintsDataTable');
    }
</script>

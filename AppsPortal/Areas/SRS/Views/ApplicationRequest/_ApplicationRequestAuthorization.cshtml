@model ApplicationRequestModel
<h3 class="Title">Application Request Authorization</h3>
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">
        @if (new CMS().HasAction(Permissions.Newservicerequest.Update, Apps.SRS))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ApprovalStatus)
                @Html.EditorFor(model => model.ApprovalStatus, new { htmlAttributes = new { @class = "form-control PageTitle", autocomplete = "off" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Comments)
                @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", autocomplete = "off", @style = "width:100%;", @rows = 5 })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EstimatedResourcesAndCosts)
                @Html.TextAreaFor(model => model.EstimatedResourcesAndCosts, new { @class = "form-control", autocomplete = "off", @style = "width:100%;", @rows = 5 })
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ApprovalStatus)
                @Html.EditorFor(model => model.ApprovalStatus, new { htmlAttributes = new { disabled = "disabled", @class = "form-control PageTitle", autocomplete = "off" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Comments)
                @Html.TextAreaFor(model => model.Comments, new { disabled = "disabled", @class = "form-control", autocomplete = "off", @style = "width:100%;", @rows = 5 })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EstimatedResourcesAndCosts)
                @Html.TextAreaFor(model => model.EstimatedResourcesAndCosts, new { disabled = "disabled", @class = "form-control", autocomplete = "off", @style = "width:100%;", @rows = 5 })
            </div>
        }
    </div>
</div>
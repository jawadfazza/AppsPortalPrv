@model StafFSecurityUnitInfoModel
    <div class="forms-fadeIn">
        @using (Html.BeginForm("SecurityUnitInfo", "Profile", FormMethod.Post, new { id = "SecurityUnitInfoUpdateForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.FormHiddenFields(model => model.UserGUID)
        <div class="row section EditSection">
            <div class="col-lg-2 col-md-4 col-sm-4 col-xs-4 text-right pull-right col-nopadding-left">
                <div class="panel-action">
                    @Html.DoneLink()
                </div>
            </div>
            <div class="col-lg-2 col-md-8 col-sm-8 col-xs-8">
                <h3 class="Title">Security Unit Informations</h3>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.NextOfKinName, new { @class = "SubTitle" })
                            @Html.EditorFor(model => model.NextOfKinName, new { htmlAttributes = new { @class = "form-control group-control", autocomplete = "off" } })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.KinMobileNumber, new { @class = "SubTitle" })
                            @Html.EditorFor(model => model.KinMobileNumber, new { htmlAttributes = new { @class = "form-control group-control", autocomplete = "off" } })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.BSAFECertAcquired, new { @class = "SubTitle" })
                            @Html.DropDownListFor(model => model.BSAFECertAcquired, new DropDownList().CheckBoxRecordStatus(), "", new { @class = "form-control select2-basic-search", style = "width:100%" })

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.BSAFEExpiryDate, new { @class = "SubTitle" })
                            @Html.EditorFor(model => model.BSAFEExpiryDate, new { htmlAttributes = new { @class = "form-control group-control", autocomplete = "off" } })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.NumberOfDependants, new { @class = "SubTitle" })
                            @Html.EditorFor(model => model.NumberOfDependants, new { htmlAttributes = new { @class = "form-control group-control", autocomplete = "off" } })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="breath-bottom">
                            @Html.LabelFor(model => model.DependantsName, new { @class = "SubTitle" })
                            @Html.TextAreaFor(model => model.DependantsName, new { @class = "form-control group-control ", autocomplete = "off", @style = "width:100%;", @rows = 3 })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
        <br />
    </div>
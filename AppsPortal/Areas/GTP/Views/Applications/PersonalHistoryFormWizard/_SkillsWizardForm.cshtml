@model List<dataPersonalHistorySkillUpdateModel>
<div class="tab-pane" id="tab1" style="margin-top: 5px;">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span><b>11. SKILLS</b>(if any) List skills such as computer or technical programs, or other relevant functional ability.</span>
            <br />
        </div>
        <div class="panel-body">
            <input type="button" data-url="/GTP/Applications/SkillsCreate" class="btn btn-success lgModal Modal-Link" value="Add New Skill" />
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info" style="margin-top:5px;">
                    <strong>No skills has been added</strong>
                </div>
            }
            else
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <div class="panel panel-default" style="margin-top:5px;">
                        <div class="panel-heading">
                            <span><b>Skill # @(i + 1) </b> <input type="button" data-url="/GTP/Applications/SkillsUpdate/@Model[i].GTPPHSkillGUID" class="btn btn-success lgModal Modal-Link pull-right" style="margin-top:-6px" value="Update / Delete this skill record" /></span>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-12">
                                <div class="row" style="padding-top:10px;">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model[i].SkillDescription)
                                            @Html.EditorFor(model => model[i].SkillDescription, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" , disabled = "disabled", @readonly = "readonly"} })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model[i].SkillLevelGUID)
                                            @Html.DropDownListFor(model => model[i].SkillLevelGUID, new DropDownList().GTPSkillLevels(Model[i].SkillLevelGUID), "", new { @class = "form-control select2-basic-search", style = "width:100%" , disabled = "disabled", @readonly = "readonly"})
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model[i].SkillNumberOfYears)
                                            @Html.EditorFor(model => model[i].SkillNumberOfYears, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", disabled = "disabled", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model[i].Comments)
                                            @Html.EditorFor(model => model[i].Comments, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" , disabled = "disabled", @readonly = "readonly"} })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-12">
                    <div style="float:right">
                        <input type='button' class='btn btn-primary wizard-custom-button-next' name="next" value='Next' data-next-url="/GTP/Applications/LanguagesWizard/Create" />

                    </div>
                    <div style="float:left">
                        <input type='button' class='btn btn-primary wizard-button-previous' name='previous' value='Previous' data-previous-url="/GTP/Applications/EducationWizard/Create" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "Countries";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("a205dc45-3e2d-4d19-85d8-5ea7eb77f6ba")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.CountriesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CountryA3Code, DbColumnName = "CountryA3Code", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CountryA2Code, DbColumnName = "CountryA2Code", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CountryDescription, DbColumnName = "CountryDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Nationality, DbColumnName = "Nationality", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.PhoneCode, DbColumnName = "PhoneCode", FilterForDataType = FilterDataTypes.Text })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.CountriesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.CountriesDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.CountriesDataTable)
        @Html.IndexDatatableCreate(Permissions.Countries.Create, Apps.CMS, Url.Action("Countries/Create/", "Codes",new { Area= "CMS"}),"")
        @Html.IndexDatatableDelete(Permissions.Countries.Delete, Apps.CMS, DataTableNames.CountriesDataTable)
        @Html.IndexDatatableRestor(Permissions.Countries.Restore, Apps.CMS, DataTableNames.CountriesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.CountriesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.CountriesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

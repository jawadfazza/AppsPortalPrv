@{
    ViewBag.Title = "Salary";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("91a90ecc-a3d1-46a3-800f-be3523a76799")

<div class="page--content">

    <div id=@string.Format("{0}Filter", DataTableNames.StaffMissionRequestDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ReferenceNumber, DbColumnName = "ReferenceNumber", FilterForDataType = "Text" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Status, DbColumnName = "LastFlowStatusGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().StaffMissionFlowStatus(), IsMultiple = true })


            </div>

            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationGUID, DbColumnName = "DutyStationGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().SyriaDutyStations(), IsMultiple = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.StaffName, DbColumnName = "StaffGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().AdminHRAllStaff(), IsMultiple = true })


            </div>

        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.StaffMissionRequestDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.StaffMissionRequestDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.StaffMissionRequestDataTable)
        @Html.IndexDatatableCreateNoPermission("/AHD/StaffMissionRequest/Create/")
        @Html.IndexDatatableDeleteNoPermission(DataTableNames.StaffMissionRequestDataTable)
        @Html.IndexDatatableRestorNoPermission(DataTableNames.StaffMissionRequestDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.StaffMissionRequestDataTable)
        @*@Html.ActionLink(" ", "ExportDangerPayStaffForMonth", "NationalStaffDangerPayCalcualtion", new { id = @ViewBag.DangerPayInformationGUID }, new { @class = "btn btn-primary fa fa-file-o" })*@

    </div>
 
    
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.StaffMissionRequestDataTable, Area = "AHD", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
        
    </div>


</div>

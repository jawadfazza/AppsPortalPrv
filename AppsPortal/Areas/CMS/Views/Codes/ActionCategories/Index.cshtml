@{
    ViewBag.Title = "ActionCategories";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("5c8fabef-8f05-4e79-a2a5-91de3756086e")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.ActionCategoriesDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ActionCategoryDescription, DbColumnName = "ActionCategoryDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ApplicationDescription, DbColumnName = "ApplicationDescription", FilterForDataType = "Text", DataList = new DropDownList().Applications(), IsMultiple = true, MustHasInitValue = false })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.ActionCategoriesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.ActionCategoriesDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ActionCategoriesDataTable)
        @Html.IndexDatatableCreate(Permissions.ActionCategories.Create, Apps.CMS, Url.Action("ActionCategories/Create/", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.ActionCategories.Delete, Apps.CMS, DataTableNames.ActionCategoriesDataTable)
        @Html.IndexDatatableRestor(Permissions.ActionCategories.Restore, Apps.CMS, DataTableNames.ActionCategoriesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ActionCategoriesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ActionCategoriesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>

@model SetupPasswordModel
@{
    ViewBag.Title = "Setup Account Password";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

<div class="page--header">
    <div class="page--banner">
        <h2>@resxPages.AccountAlmostReady</h2>
        <article>
            @resxPages.AccountAlmostReadyArticle
        </article>
    </div>
</div>

<div class="page--content">
    <div class="page--body">
        <h3>@resxPages.ForgetPasswordStep2</h3>
        @using (Html.BeginForm("SetupPassword", "Account", FormMethod.Post, new { @class = "formControl" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control password-strength", placeholder = "Enter a new password", autocompelete = "new-password", data_class="pwdStrength" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Retype password", autocompelete = "new-password" } })
                    </div>
                    <div class="form-group form-footer">
                        <input type="submit" value="@resxUIControls.SaveChanges" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
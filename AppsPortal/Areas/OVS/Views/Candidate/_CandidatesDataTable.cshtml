@model MasterRecordStatus
<h3 class="Title">@resxDbFields.ElectionCandidate</h3>
<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter",DataTableNames.ElectionCandidatesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.ElectionCandidatesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer",DataTableNames.ElectionCandidatesDataTable)" >
                    <button type="button" title="Filter" class="btnFilter btn btn-sm btn-success" onclick="ToggleFilter('@DataTableNames.ElectionCandidatesDataTable');"><i class="fa fa-filter"></i></button>
                    @Html.FieldDataTableCreate(Permissions.ElectionsManagement.Create, Apps.OVS, Url.Action("ElectionCandidateCreate", "Candidate", new { FK = Model.ParentGUID, Area = "OVS" }))
                    @Html.FieldDataTableDelete(Permissions.ElectionsManagement.Delete, Apps.OVS, DataTableNames.ElectionCandidatesDataTable)
                    @Html.FieldDataTableRestore(Permissions.ElectionsManagement.Restore, Apps.OVS, DataTableNames.ElectionCandidatesDataTable)
                    <button type="button" title=@resxDbFields.Refresh class="btnRefresh btn btn-sm btn-primary" onclick="DataTableRefresh('@DataTableNames.ElectionCandidatesDataTable');"><i class="fa fa-refresh"></i></button>
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ElectionCandidatesDataTable, FormController = "Candidate", Area="OVS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID ,OrderBy=1})
    </div>
</div>


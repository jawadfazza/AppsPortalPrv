@model MasterRecordStatus
<h3 class="Title">Soft Fields</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.TemplateTypeDocumentSoftFieldsDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.TemplateTypeDocumentSoftFieldsDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.TemplateTypeDocumentSoftFieldsDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.TemplateTypeDocumentSoftFieldsDataTable)
                @Html.FieldDataTableCreate(Permissions.DASConfiguration.Create, Apps.DAS, Url.Action("TemplateTypeDocumentSoftFieldCreate", "TemplateConfiguration", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.DASConfiguration.Delete, Apps.DAS, DataTableNames.TemplateTypeDocumentSoftFieldsDataTable)
                @Html.FieldDataTableRestore(Permissions.DASConfiguration.Restore, Apps.DAS, DataTableNames.TemplateTypeDocumentSoftFieldsDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.TemplateTypeDocumentSoftFieldsDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.TemplateTypeDocumentSoftFieldsDataTable, FormController = "TemplateConfiguration", Area = "DAS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
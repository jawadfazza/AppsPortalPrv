@model MasterRecordStatus
@*<h3 class="Title">Bank Accounts</h3>*@
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      
        <div id=@string.Format("{0}Filter", DataTableNames.StaffAbsenceBalancesDataTable) class="filter-section" style="display:none;">
            <div class="row">
                <div class="col-lg-12">

                    @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
                </div>
            </div>
            <div class="form-group filter-actions">
                @Html.DatatableFilterControls(DataTableNames.StaffAbsenceBalancesDataTable)
            </div>
        </div>
        <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.StaffAbsenceBalancesDataTable)">
            @Html.FieldDataTableFilter(DataTableNames.StaffAbsenceBalancesDataTable)
            @Html.FieldDataTableCreate(Permissions.StaffAbsenceBalance.Create, Apps.AHD, Url.Action("StaffAbsenceBalanceCreate", "StaffAbsenceBalances", new { FK = Model.ParentGUID }))
            @Html.FieldDataTableDelete(Permissions.StaffAbsenceBalance.Delete, Apps.AHD, DataTableNames.StaffAbsenceBalancesDataTable)
            @Html.FieldDataTableRestore(Permissions.StaffAbsenceBalance.Restore, Apps.AHD, DataTableNames.StaffAbsenceBalancesDataTable)

            @*@Html.FieldDataTableRefresh(DataTableNames.StaffAbsenceBalancesDataTable)*@
        </div>
        
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.StaffAbsenceBalancesDataTable, FormController = "StaffAbsenceBalances", Area = "AHD", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Page, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
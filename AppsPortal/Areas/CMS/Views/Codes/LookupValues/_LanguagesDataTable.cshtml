@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.TableValuesLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.TableValuesLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.TableValuesLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.TableValuesLanguagesDataTable)
                @{
                    var FactorsToken = new FactorsCollector().LookupValue(Model.ParentGUID);
                }
                @Html.FieldDataTableCreate(Permissions.LookupValues.Create, Apps.CMS, Url.Action("TableValuesLanguageCreate", "Codes", new { FK = Model.ParentGUID }), FactorsToken)
                @Html.FieldDataTableDelete(Permissions.LookupValues.Delete, Apps.CMS, DataTableNames.TableValuesLanguagesDataTable, FactorsToken)
                @Html.FieldDataTableRestore(Permissions.LookupValues.Restore, Apps.CMS, DataTableNames.TableValuesLanguagesDataTable, FactorsToken)
                @Html.FieldDataTableRefresh(DataTableNames.TableValuesLanguagesDataTable)
            </div>
                    }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.TableValuesLanguagesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
@{
    ViewBag.Title = "Applications";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("46ad8754-32f8-4a91-b6cd-a463147574c3")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.StaffPhoneDirectoryDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FullName, DbColumnName = "FullName", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.EmailAddress, DbColumnName = "EmailAddress", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationGUID, DbColumnName = "DutyStationGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsSearchable = true, DataList = new DropDownList().SyriaStaffDutyStation() })

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DepartmentGUID, DbColumnName = "DepartmentGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsSearchable = true, DataList = new DropDownList().StaffDepartments() })

            </div>
            <div class="col-lg-12">

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ContactType, DbColumnName = "PhoneHolderTypeGUID", FilterForDataType = FilterDataTypes.Options, MustHasInitValue = false, IsSearchable = true, DataList = new DropDownList().PhoneHolderTypes(1) })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.JobTitleDescription, DbColumnName = "JobTitleGUID", FilterForDataType = FilterDataTypes.Options, IsSearchable = true, MustHasInitValue = false, DataList = new DropDownList().JobTitles() })
            </div>
    
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.EmailAddress, DbColumnName = "EmailAddress", FilterForDataType = FilterDataTypes.Text })

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.StaffPhoneDirectoryDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.StaffPhoneDirectoryDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.StaffPhoneDirectoryDataTable)

        
        @Html.FieldDataTableCreate(Permissions.WarehouseItemsEntry.Create, Apps.WMS, Url.Action("StaffPhoneDirectoryCreate", "StaffProfile"))


        @Html.FieldDataTableRestore(Permissions.WarehouseItemsEntry.Restore, Apps.WMS, DataTableNames.StaffPhoneDirectoryDataTable)



        @Html.IndexDatatableRefresh(DataTableNames.StaffPhoneDirectoryDataTable)
    </div>
    <div class="form-group">
        @Html.ActionLink("Export Syria Phone Directory", "ExportStaffPhoneDirectory", "ORG/Reports",null, new { @class = " fa fa-file-o" })
        
        @*<button onclick="location.href='@Url.Action("ExportStaffPhoneDirectory", "ORG/Reports")'">Test</button>*@
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.StaffProfileDataTable, FormController = "StaffProfile", Area = "ORG", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
        @*@Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.StaffPhoneDirectoryDataTable, FormController = "StaffProfile", Area = "ORG", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })*@
    </div>
</div>

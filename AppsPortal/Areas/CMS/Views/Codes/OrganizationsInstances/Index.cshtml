@{
    ViewBag.Title = "Organizations Entities";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("d402503e-9b66-4db7-a4c8-65fb22bfda3e")
<div class="page--content">
    <div id=@string.Format("{0}Filter",DataTableNames.OrganizationsInstancesDataTable) class="filter-section" style="display:none;">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationInstanceDescription, DbColumnName = "OrganizationInstanceDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationDescription, DbColumnName = "OrganizationDescription", FilterForDataType = FilterDataTypes.Text })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OperationDescription, DbColumnName = "OperationDescription", FilterForDataType = FilterDataTypes.Text })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = FilterDataTypes.Boolean, MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.OrganizationsInstancesDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer",DataTableNames.OrganizationsInstancesDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.OrganizationsInstancesDataTable)
        @Html.IndexDatatableCreate(Permissions.OrganizationsInstances.Create, Apps.CMS, Url.Action("OrganizationsInstances/Create", "Codes", new { Area = "CMS" } ))
        @Html.IndexDatatableDelete(Permissions.OrganizationsInstances.Delete, Apps.CMS, DataTableNames.OrganizationsInstancesDataTable)
        @Html.IndexDatatableRestor(Permissions.OrganizationsInstances.Restore, Apps.CMS, DataTableNames.OrganizationsInstancesDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.OrganizationsInstancesDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.OrganizationsInstancesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1})
    </div>
</div>

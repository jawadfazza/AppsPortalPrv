}
@Html.PageHeader("36ba74c3-908a-4969-b5c3-b2b0528fceba")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.ShuttleRequestsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12 ">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationInstanceDescription, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = "Options", DataList = new DropDownList().OrganizationsInstancesByProfile() })


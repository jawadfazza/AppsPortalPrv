@model userPersonalDetailsLanguage
@using (Html.BeginForm("PersonalDetailsNames", "Profile", FormMethod.Post, new { id = "PersonalDetailsNames" }))
{
    string ModalTitle = Model.PersonalDetailsLanguageGUID.ToString() == Guid.Empty.ToString() ? "New Name in Language" : "Edit Name in Language";
    @Html.Partial("_ModalHeader", ModalTitle)
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.UserGUID)
        @Html.HiddenFor(model => model.PersonalDetailsLanguageGUID, new { @class = "PK" })
        @Html.HiddenFor(model => model.userPersonalDetailsLanguageRowVersion)
        @Html.HiddenFor(model => model.Active)
        <div class="form-group row">
            @Html.LabelFor(model => model.LanguageID, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="input-group">
                    @Html.DropDownListFor(model => model.LanguageID, new DropDownList().Languages(false), "", new { @class = "form-control select2-basic-single", style = "width:100%" })
                </div>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="input-group">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.FatherName, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="input-group">
                    @Html.EditorFor(model => model.FatherName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.GrandFatherName, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="input-group HANDLER">
                    @Html.EditorFor(model => model.GrandFatherName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Surname, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="input-group HANDLER">
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer form-footer">
        @if (Model.PersonalDetailsLanguageGUID == Guid.Empty)
                {
            @Html.CreateButton()
        }
        else
        {
            if (Model.Active)
            {
                @Html.UpdateButton()
                @Html.DeleteSwitchButton()
            }
            else
            {
                @Html.RestoreSwitchButton()
            }
        }
       @Html.CloseModalButton()
    </div>
}

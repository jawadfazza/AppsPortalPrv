


@model MasterRecordStatus
<h3 class="Title">Item(s) List</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.WarehouseConsumableItemEntryDetailDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.WarehouseConsumableItemEntryDetailDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.WarehouseConsumableItemEntryDetailDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.WarehouseConsumableItemEntryDetailDataTable)
                @Html.FieldDataTableCreate(Permissions.WarehouseItemsEntry.Create, Apps.WMS, Url.Action("ConsumableItemEntryDetailCreate", "ConsumableItem", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.WarehouseItemsEntry.Delete, Apps.WMS, DataTableNames.WarehouseConsumableItemEntryDetailDataTable)
                @Html.FieldDataTableRestore(Permissions.WarehouseItemsEntry.Restore, Apps.WMS, DataTableNames.WarehouseConsumableItemEntryDetailDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.WarehouseConsumableItemEntryDetailDataTable)
            </div>
        }
         @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.WarehouseConsumableItemEntryDetailDataTable, FormController = "ConsumableItem", Area = "WMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
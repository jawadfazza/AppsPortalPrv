@model IEnumerable<ItemOverviewPipelineDataTableModel>
@{
    ViewBag.Title = "StockItems";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}


<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.ISSItemOverviewDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ItemGUID, DbColumnName = "ItemGUID", FilterForDataType = "Text", DataList = new DropDownList().StockInsightItems(), IsMultiple = true, IsSearchable = true })
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.StockGUID, DbColumnName = "StockGUID", FilterForDataType = "Text", DataList = new DropDownList().StockInsighsStocks(), IsMultiple = true, IsSearchable = true })*@

                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ItemDescription, DbColumnName = "ItemDescription", FilterForDataType = "Text" })*@
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DutyStationDescription, DbColumnName = "DutyStationGUID", FilterForDataType = "Options", DataList = new DropDownList().DutyStationsByProfile(), IsMultiple = true })*@

            </div>

            <div class="col-lg-12">
                @*@Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.OrganizationInstanceDescription, DbColumnName = "OrganizationInstanceGUID", FilterForDataType = "Options", DataList = new DropDownList().OrganizationsInstancesByProfile(), IsMultiple = true })*@

                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.ISSItemOverviewDataTable)
        </div>
    </div>
    <br /><br />
    <a href="/ISS/Home/OfflineBrowse">Back</a>
    <div class="page--body">
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayName("Item Name")
                </th>
                <th>
                    @Html.DisplayName("All Stocks")
                </th>
                <th>
                    @Html.DisplayName("Item Pipeline")
                </th>
                <th>
                    @Html.DisplayName("Stock With Pipeline")
                </th>
                <th>
                    @Html.DisplayName("Reserved For Emergency")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TotalItemAllStocks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalItemPipeLine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalItemStockWithPipeLine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalReservedForEmergency)
                    </td>


                </tr>
            }

        </table>
    </div>
</div>


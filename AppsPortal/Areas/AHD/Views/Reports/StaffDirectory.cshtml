@model string
@using ReportViewerForMvc;
@{
    ViewBag.Title = "TestReport";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("c09b5b49-e60a-4c8c-b8c0-005c481aec1e")
<div class="page--content">
    @using (Html.BeginForm("GenerateStaffPhotoDirectoryReport", "Reports", new { Area = "AHD" }, FormMethod.Post, new { id = "ReportForm" }))
    {
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="height:35px">
                        <h3 class="panel-title" style="color:black;"><b>Photo Directory Filters</b> </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                @Html.Label("Staff Name")
                                @Html.DropDownList("UserGUIDs", new DropDownList().CoreUsers(true),
                                            new
                                                 {
                                                     multiple = "multiple",
                                                     data = "nothing",
                                                @class = "form-control select2-basic-multiple",
                                                style = "width:100%",
                                                     placeholder = "Passagnger"
                                                 })

                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                @Html.Label("Duty Station")
                                @Html.DropDownList("DutyStationGUIDs", new DropDownList().DutyStationsByProfile(),
                               new
                                    {
                                        multiple = "multiple",
                                        data = "nothing",
                                                @class = "form-control select2-basic-multiple",
                                                style = "width:100%",
                                        placeholder = "Duty Station"
                                    })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                @Html.Label("Department")
                                @Html.DropDownList("DepartmentGUIDs", new DropDownList().Departments(),
                               new
                                    {
                                        multiple = "multiple",
                                        data = "nothing",
                                                @class = "form-control select2-basic-multiple",
                                                style = "width:100%",
                                        placeholder = "Department"
                                    })
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" style="display: flex;margin-top: 25px;">
                                <input class="btn btn-primary " data-submittype="" onclick="InitDashboards();SubmitForm(this);" type="submit" value="Generate Report">
                                <input type="reset" class="btn btn-default" style="width:50%" value="Clear All" onclick="ClearAll();">
                            </div>
                        </div>



                    </div>
                </div>
            </div>

        </div>
        <hr />
        <br />
        <br />

        <p class="Title" style="font-style:oblique">How to use VCF (contact file)?</p>
        <b>Method Import VCF to iPhone via Email</b>
        <ol>
            <li>1-Create an email, add the VCF file to it as an attachment, and send the email to your iPhone.</li>
            <li>2-Check the mail on the iPhone and tap the VCF file.</li>
            <li>3-Tap "Share" > "More" > "Contacts".</li>
            <li>4-Click "Create New Contacts" to import contacts from the VCF file to your iPhone.</li>
        </ol>

        <b>Method Import VCF to Android,If you've saved contacts to a VCF file, you can import them to your Google Account.</b>
        <ol>
            <li>1-On your Android phone or tablet, open the Contacts app.</li>
            <li>2-At the top left, tap Menu Settings Import.</li>
            <li>3-Tap . vcf file.</li>
            <li>4-Find and select the VCF file to import.</li>
        </ol>
        <br />
        <a href="../../AHD/Reports/DownloadFile" class="btn btn-success"> <i class="fa fa-address-book"></i> Download Staff Contact</a>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">


            <div class="form-group" id="ReportViewer">

            </div>
        </div>
    }

</div>
<script>
    var Process = '<center><img src="../Assets/Images/loading.gif" style="top: 50%;position: absolute;" /></center>'
    function InitDashboards() {
        //NoSelectionSelectAll();
        $('#ReportViewer').show();
        $('#ReportViewer').html('').append(Process);
        $('html,body').animate({
            scrollTop: $("#ReportViewer").offset().top + 100
        }, 'slow');
    }
</script>
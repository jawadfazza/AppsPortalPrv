@{
    ViewBag.Title = "PurchasingReport";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("a69189ac-ae8a-4d32-9a4d-6759656a61eb")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.PurchasingReportsDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.CostCentre, DbColumnName = "CostCentre", FilterForDataType = "Number" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.PuchaseOrder, DbColumnName = "PuchaseOrder", FilterForDataType = "Text" })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.BgtYr, DbColumnName = "BgtYr", FilterForDataType = "Number" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })

            </div>
            
        </div>
      
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.PurchasingReportsDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.PurchasingReportsDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.PurchasingReportsDataTable)

        @Html.FieldDataTableCreate(Permissions.PurchasingReport.Create, Apps.TTT, Url.Action("PurchasingReportCreate", "PurchasingReports"))
        @Html.IndexDatatableDelete(Permissions.PurchasingReport.Delete, Apps.TTT, DataTableNames.PurchasingReportsDataTable)
        @Html.IndexDatatableRestor(Permissions.PurchasingReport.Restore, Apps.TTT, DataTableNames.PurchasingReportsDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.PurchasingReportsDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.PurchasingReportsDataTable, FormController = "PurchasingReports", Area = "TTT", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 1 })
    </div>
</div>



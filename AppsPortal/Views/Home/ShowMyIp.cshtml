@{
    ViewBag.Title = "ShowMyIp";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}

<h2>ShowMyIp</h2>


<div class="row">
    <div class="col-md-12">
        <input id="btn-showMyInfo" type="button" value="Show my info" class="btn btn-primary" />
    </div>
    <div id="div-infoResult" class="col-md-12">

    </div>
</div>

<script type="text/javascript">
    $('#btn-showMyInfo').click(function () {
        $.ajax({
            type: "GET",
            url: "/Home/ShowMyIp/",
            success: function (result) {
                $('#div-infoResult').html(result)
            }
        });
    });
</script>
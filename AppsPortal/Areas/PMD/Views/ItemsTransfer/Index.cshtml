@{
    ViewBag.Title = "ItemsTransfers";
    Layout = "~/Views/Shared/Layouts/_SiteLayout.cshtml";
}
@Html.PageHeader("7d1c82b4-18b9-4cbc-aa50-8844514fb1ba")
<div class="page--content">
    <div id=@string.Format("{0}Filter", DataTableNames.ItemsTransferDataTable) class="filter-section" style="display:none;" DefaultButton="btnFind">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FromOrganizationInstanceGUID, DbColumnName = "FromOrganizationInstanceGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().PMDImplementingPartners(), IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.FromGovernorateGUID, DbColumnName = "FromGovernorateGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().PMDGovernorates(), IsSearchable = true })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ToOrganizationInstanceGUID, DbColumnName = "ToOrganizationInstanceGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().PMDImplementingPartners(), IsSearchable = true })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.ToGovernorateGUID, DbColumnName = "ToGovernorateGUID", FilterForDataType = FilterDataTypes.Options, DataList = new DropDownList().PMDGovernorates(), IsSearchable = true })
            </div>
            <div class="col-lg-12">
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.DamagedLostDistributionDate, DbColumnName = "DamagedLostDistributionDate", FilterForDataType = "Date" })
                @Html.Partial("_FilterField", new FilterField { LabelText = resxDbFields.Active, DbColumnName = "Active", FilterForDataType = "Boolean", MustHasInitValue = true, DataList = new DropDownList().RecordStatus() })
            </div>
        </div>
        <div class="form-group filter-actions">
            @Html.DatatableFilterControls(DataTableNames.ItemsTransferDataTable)
        </div>
    </div>
    <div class="dt-controls-index" id="@string.Format("{0}ActionsContainer", DataTableNames.ItemsTransferDataTable)">
        @Html.IndexDatatableFilter(DataTableNames.ItemsTransferDataTable)
        @Html.IndexDatatableCreate(Permissions.PMDItemsTransfer.Create, Apps.PMD, "/PMD/ItemsTransfer/Create")
        @Html.IndexDatatableDelete(Permissions.PMDItemsTransfer.Delete, Apps.PMD, DataTableNames.ItemsTransferDataTable)
        @Html.IndexDatatableRestor(Permissions.PMDItemsTransfer.Restore, Apps.PMD, DataTableNames.ItemsTransferDataTable)
        @Html.IndexDatatableRefresh(DataTableNames.ItemsTransferDataTable)
    </div>
    <div class="page--body">
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.ItemsTransferDataTable, Area = "PMD", Type = DataTableTypes.Index, EditMode = DataTableEditMode.Page, OrderBy = 0 })
    </div>
</div>

@model MasterRecordStatus
<h3 class="Title">Travelers</h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.BlomShuttleDelegationTravelerDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.BlomShuttleDelegationTravelerDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.BlomShuttleDelegationTravelerDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.BlomShuttleDelegationTravelerDataTable)
                @Html.FieldDataTableCreate(Permissions.StaffShuttleDelegation.Create, Apps.AHD, Url.Action("BlomShuttleDelegationTravelerCreate", "StaffDelegation", new { FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.StaffShuttleDelegation.Delete, Apps.AHD, DataTableNames.BlomShuttleDelegationTravelerDataTable)
                @Html.FieldDataTableRestore(Permissions.StaffShuttleDelegation.Restore, Apps.AHD, DataTableNames.BlomShuttleDelegationTravelerDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.BlomShuttleDelegationTravelerDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.BlomShuttleDelegationTravelerDataTable, FormController = "StaffDelegation", Area = "AHD", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
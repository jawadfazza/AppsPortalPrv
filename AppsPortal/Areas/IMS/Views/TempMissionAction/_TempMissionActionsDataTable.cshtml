@model MasterRecordStatus
<h3 class="Title"></h3>
<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">

        <div id=@string.Format("{0}Filter", DataTableNames.MissionTempActionsDataTable) class="filter-section" style="display:none;">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("_RecordStatus", DataTableNames.MissionTempActionsDataTable)
                </div>
            </div>
        </div>
        <div class="dt-controls-field" id="@string.Format(" {0}ActionsContainer", DataTableNames.MissionTempActionsDataTable)">
                    @Html.FieldDataTableFilter(DataTableNames.MissionTempActionsDataTable)
                @Html.FieldDataTableCreateNoActionPermission(Permissions.MissionReportForm.Create, Apps.IMS, Url.Action("MissionTempActionsCreate", "MissionReportForm", new { FK = Model.ParentGUID }))
                @*@Html.FieldDataTableDelete(Permissions.MissionReportForm.Create, Apps.IMS, DataTableNames.MissionTempActionsDataTable)
                @Html.FieldDataTableRestore(Permissions.MissionReportForm.Create, Apps.IMS, DataTableNames.MissionTempActionsDataTable)*@
                @Html.FieldDataTableRefresh(DataTableNames.MissionTempActionsDataTable)
        </div>
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MissionTempActionsDataTable, FormController = "MissionReportForm", Area = "IMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
<div class="row">
    <div class="col-lg-7 col-md-6 col-sm-8 col-xs-12">
        @if (Model.IsParentActive)
        {
            <div id=@string.Format("{0}Filter", DataTableNames.TelecomCompanyLanguagesDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.TelecomCompanyLanguagesDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.TelecomCompanyLanguagesDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.TelecomCompanyLanguagesDataTable)
                @Html.FieldDataTableCreate(Permissions.TelecomCompanies.Create, Apps.TBS, Url.Action("TelecomCompanyLanguageCreate", "Configuration", new { Area = "TBS", FK = Model.ParentGUID }))
                @Html.FieldDataTableDelete(Permissions.TelecomCompanies.Delete, Apps.TBS, DataTableNames.TelecomCompanyLanguagesDataTable)
                @Html.FieldDataTableRestore(Permissions.TelecomCompanies.Restore, Apps.TBS, DataTableNames.TelecomCompanyLanguagesDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.TelecomCompanyLanguagesDataTable)
            </div>
        }
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.TelecomCompanyLanguagesDataTable, FormController = "Configuration", Area = "TBS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
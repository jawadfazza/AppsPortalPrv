@model MasterRecordStatus
<h3 class="Title">Itinerary</h3>
<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
      
            <div id=@string.Format("{0}Filter", DataTableNames.MissionRequestItineraryDataTable) class="filter-section" style="display:none;">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("_RecordStatus", DataTableNames.MissionRequestItineraryDataTable)
                    </div>
                </div>
            </div>
            <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.MissionRequestItineraryDataTable)">
                @Html.FieldDataTableFilter(DataTableNames.MissionRequestItineraryDataTable)
                @*@Html.IndexDatatableCreateNoPermission("/AHD/MissionRequest/RAndRDocumentsCreate")*@
                @Html.IndexDatatableAddMissionItineraryTravelSegmentDate(Permissions.StaffMissionRequest.Create, Apps.AHD, Url.Action("MissionRequestItinerarySeqmentDateCreate", "MissionRequest", new { FK = Model.ParentGUID }))
                @*@Html.IndexDatatableAddMissionItineraryReturnDate(Permissions.StaffMissionRequest.Create, Apps.AHD, Url.Action("MissionRequestItineraryReturnCreate", "MissionRequest", new { FK = Model.ParentGUID }))*@
                @Html.FieldDataTableDelete(Permissions.StaffMissionRequest.Delete, Apps.AHD, DataTableNames.MissionRequestItineraryDataTable)
                @Html.FieldDataTableRestore(Permissions.StaffMissionRequest.Restore, Apps.AHD, DataTableNames.MissionRequestItineraryDataTable)
                @Html.FieldDataTableRefresh(DataTableNames.MissionRequestItineraryDataTable)
            </div>
        
        @Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.MissionRequestItineraryDataTable, FormController = "MissionRequest", Area = "AHD", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
    </div>
</div>
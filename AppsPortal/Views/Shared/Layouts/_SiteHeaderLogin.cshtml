<div class="header__wrapper">
    <div class="logo">
        <a href="/Home/"><img src="~/Assets/Images/unhcr-logo.png" alt="UNHCR logo" /></a>
    </div>
    <div class="actions">
        <ul>
         
            <li class="lang"><a href="#_" title="Global">@resxSiteHeader.Language [@Languages.CurrentCulture().ToUpper()]</a></li>
            <li class="menu"><a href="#_" title="Menu">Menu</a></li>
        </ul>
        <div class="un--settings">
            <div class="settings__wrapper">
                @using (Html.BeginForm("SetLanguage", "ChangeLanguage", FormMethod.Post))
                {
                    <div style="min-height:60px;">
                        <div class="global--lang">
                            <p>@resxSiteHeader.SelectLanguageForPortal</p>
                            <div class="global--lang__select">
                                @Html.ActionLink("English", "SetLanguage", "ChangeLanguage", new { culture = "en-US" }, null)
                                @Html.ActionLink("Français", "SetLanguage", "ChangeLanguage", new { culture = "fr-FR" }, null)
                                @Html.ActionLink("العربية", "SetLanguage", "ChangeLanguage", new { culture = "ar-IQ" }, null)
                            </div>
                        </div>
                    </div>
                    <div class="form--row">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-control-static">
                                    <select id="culture" name="culture" style="direction: ltr">
                                        <option value="en-US">@resxSiteHeader.MoreLanguages</option>
                                        @Html.Partial("_LanguagesList")
                                    </select>
                                </div>
                                <input type="submit" value="@resxSiteHeader.SelectLanguage" class="btn btn-primary" style="margin-top:5px;" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

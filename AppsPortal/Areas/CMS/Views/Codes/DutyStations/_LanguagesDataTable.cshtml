@model MasterRecordStatus
<h3 class="Title">@resxPages.Globalization</h3>
@if (Model.IsParentActive)
{
    <div id=@string.Format("{0}Filter", DataTableNames.DutyStationLanguagesDataTable) class="filter-section" style="display:none;">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_RecordStatus", DataTableNames.DutyStationLanguagesDataTable)
            </div>
        </div>
    </div>
    <div class="dt-controls-field" id="@string.Format("{0}ActionsContainer", DataTableNames.DutyStationLanguagesDataTable)">
        @Html.FieldDataTableFilter(DataTableNames.DutyStationLanguagesDataTable)
        @Html.FieldDataTableCreate(Permissions.DutyStations.Create, Apps.CMS, Url.Action("DutyStationLanguageCreate", "Codes", new { FK = Model.ParentGUID }))
        @Html.FieldDataTableDelete(Permissions.DutyStations.Delete, Apps.CMS, DataTableNames.DutyStationLanguagesDataTable)
        @Html.FieldDataTableRestore(Permissions.DutyStations.Restore, Apps.CMS, DataTableNames.DutyStationLanguagesDataTable)
        @Html.FieldDataTableRefresh(DataTableNames.DutyStationLanguagesDataTable)
    </div>
}
@Html.Partial("DataTableControl", new DataTableControl { Name = DataTableNames.DutyStationLanguagesDataTable, FormController = "Codes", Area="CMS", Type = DataTableTypes.Field, EditMode = DataTableEditMode.Modal, PK = Model.ParentGUID, OrderBy = 1 })
